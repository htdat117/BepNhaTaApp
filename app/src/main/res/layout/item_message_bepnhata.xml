<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="9:12 pm"
            android:textSize="@dimen/body1"
            android:textColor="@color/dark2"
            android:layout_marginTop="8dp"
            android:layout_marginStart="285dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_avatar"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="8dp"
                android:background="@drawable/bg_avatar"
                android:clipToOutline="true"
                android:cropToPadding="true"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_logo" />

            <TextView
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:background="@drawable/bg_dark4"
                android:padding="10dp"
                android:text="Chào anh/chị! Gói nguyên liệu bên Bếp giao nội thành trong 2-3 ngày, phí ship 20k. Nếu đơn từ 300k trở lên thì miễn phí ship ạ. Anh/chị cần thêm thông tin gì không ạ?"
                android:textColor="@color/dark1"
                android:textSize="@dimen/body1" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="16dp"
                android:src="@drawable/ic_sent" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>