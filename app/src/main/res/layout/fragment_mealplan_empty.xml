<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="8dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ngày này chưa có bữa ăn nào được lên kế hoạch"
        style="@style/Body.Regular.Ag2"
        android:gravity="center"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnAutoGenerate"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Tạo tự động ngay"
        app:cornerRadius="16dp"
        android:layout_marginTop="8dp"
        android:minHeight="0dp"
        android:paddingVertical="8dp"/>

    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Sao chép ngày trước đó"
        app:cornerRadius="16dp"
        android:gravity="center"
        android:layout_marginTop="4dp"
        android:minHeight="0dp"
        android:paddingVertical="8dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnLoadSaved"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Tải kế hoạch đã lưu"
        app:cornerRadius="16dp"
        android:gravity="center"
        android:layout_marginTop="4dp"
        android:minHeight="0dp"
        android:paddingVertical="8dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnLoadBlank"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Tạo thực đơn trống"
        app:cornerRadius="16dp"
        android:gravity="center"
        android:layout_marginTop="4dp"
        android:minHeight="0dp"
        android:paddingVertical="8dp"/>

</LinearLayout> 