<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">

    <!-- Header reuse -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_back"
            android:contentDescription="Back"
            app:tint="@color/primary1" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Xác nhận tải thực đơn"
            android:textColor="@color/primary1"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/primary1" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Details header -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chi tiết"
                android:textStyle="bold"
                style="@style/Body.Regular.Ag3"
                android:textColor="@color/dark1"/>

            <!-- Details list -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp">

                <!-- Title -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="8dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Tiêu đề thực đơn"
                        style="@style/Body.Regular.Ag3"/>
                    <TextView
                        android:id="@+id/tvDetailTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        style="@style/Body.Regular.Ag3"
                        android:textColor="@color/primary1"/>
                </LinearLayout>

                <!-- Description -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="8dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Mô tả"
                        style="@style/Body.Regular.Ag3"/>
                    <TextView
                        android:id="@+id/tvDetailDescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        style="@style/Body.Regular.Ag3"
                        android:textColor="@color/primary1"/>
                </LinearLayout>

                <!-- Day count -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="8dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Số ngày"
                        style="@style/Body.Regular.Ag3"/>
                    <TextView
                        android:id="@+id/tvDetailDayCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        style="@style/Body.Regular.Ag3"
                        android:textColor="@color/primary1"/>
                </LinearLayout>

                <!-- Load date -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="8dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Tải vào ngày"
                        style="@style/Body.Regular.Ag3"/>
                    <TextView
                        android:id="@+id/tvDetailLoadDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        style="@style/Body.Regular.Ag3"
                        android:textColor="@color/primary1"/>
                </LinearLayout>

                <!-- Placeholder for nutrition; static for now -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="8dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Calo trung bình"
                        style="@style/Body.Regular.Ag3"/>
                    <TextView
                        android:id="@+id/tvDetailCal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2016 Kcal"
                        style="@style/Body.Regular.Ag3"
                        android:textColor="@color/primary1"/>
                </LinearLayout>

                <!-- Carbs -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="8dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Carbs trung bình"
                        style="@style/Body.Regular.Ag3"/>
                    <TextView
                        android:id="@+id/tvDetailCarbs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        style="@style/Body.Regular.Ag3"
                        android:textColor="@color/primary1"/>
                </LinearLayout>

                <!-- Fat -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="8dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Fat trung bình"
                        style="@style/Body.Regular.Ag3"/>
                    <TextView
                        android:id="@+id/tvDetailFat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        style="@style/Body.Regular.Ag3"
                        android:textColor="@color/primary1"/>
                </LinearLayout>

                <!-- Protein -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="8dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Protein trung bình"
                        style="@style/Body.Regular.Ag3"/>
                    <TextView
                        android:id="@+id/tvDetailProtein"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        style="@style/Body.Regular.Ag3"
                        android:textColor="@color/primary1"/>
                </LinearLayout>

                <!-- Preview list days -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvPreview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:layout_marginTop="16dp"/>
            </LinearLayout>

            <!-- Upload button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnUpload"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="32dp"
                android:text="Tải lên"
                app:cornerRadius="16dp"
                android:textAllCaps="false"
                style="@style/Body.Bold.Ag3"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/primary1"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="80dp"/>
        </LinearLayout>
    </ScrollView>

    <include
        android:id="@+id/bottom_navigation_container"
        layout="@layout/layout_bottom_navigation" />

</LinearLayout> 