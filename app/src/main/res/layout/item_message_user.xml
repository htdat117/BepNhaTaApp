<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="9:12 pm"
            android:textSize="@dimen/body1"
            android:textColor="@color/dark2"
            android:layout_marginTop="8dp"
            android:layout_marginStart="70dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:layout_gravity="right"
            android:layout_marginEnd="8dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_sent"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:text="Alo Bếp, mình muốn hỏi về chính sách giao hàng. Giao nội thành bao lâu, phí ship thế nào, và có giao nhanh không?"
                android:textSize="@dimen/body1"
                android:layout_marginStart="16dp"
                android:textColor="@color/white"
                android:padding="10dp"
                android:background="@drawable/bg_badge_orange"/>

            <ImageView
                android:id="@+id/img_avatar"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/img_dat"
                android:scaleType="centerCrop"
                android:background="@drawable/bg_avatar"
                android:cropToPadding="true"
                android:clipToOutline="true"
                android:layout_marginStart="16dp"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>