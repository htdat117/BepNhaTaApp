<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Cách bảo quản -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cách bảo quản sản phẩm"
            style="@style/Body.Bold.Ag1"
            android:textColor="@color/dark1"/>

        <TextView
            android:id="@+id/tvStorageContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Body.Regular.Ag2"
            android:textColor="@color/dark1"
            android:text=""/>

        <!-- Hạn sử dụng -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/dark1"
            android:text="Hạn sử dụng"
            style="@style/Body.Bold.Ag1"
            android:layout_marginTop="12dp"/>

        <TextView
            android:id="@+id/tvExpiryContent"
            android:layout_width="wrap_content"
            style="@style/Body.Regular.Ag2"
            android:textColor="@color/dark1"
            android:layout_height="wrap_content"
            android:text=""/>

        <!-- Lưu ý -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lưu ý"
            android:textColor="@color/dark1"
            style="@style/Body.Bold.Ag1"
            android:layout_marginTop="12dp"/>

        <TextView
            android:id="@+id/tvNoteContent"
            android:layout_width="wrap_content"
            style="@style/Body.Regular.Ag2"
            android:textColor="@color/dark1"
            android:layout_height="wrap_content"
            android:text=""/>

        <!-- Hình minh họa hướng dẫn sử dụng -->
        <ImageView
            android:id="@+id/ivGuideImage"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp"
            android:scaleType="centerCrop"
            android:background="@drawable/bg_card_round_ingredient"
            android:src="@drawable/food_placeholder"/>
    </LinearLayout>
</ScrollView> 