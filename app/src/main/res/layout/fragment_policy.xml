<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header cam, icon back ngoài, tiêu đề căn giữa -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="#E7642F">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="12dp"
                android:src="@drawable/ic_back"
                android:contentDescription="Quay lại" />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="CHÍNH SÁCH"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#FFFFFF" />
        </RelativeLayout>

        <!-- Nút điều hướng: HorizontalScrollView chứa 4 nút -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:scrollbars="none"
            android:layout_marginTop="0dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingLeft="16dp">

                <Button
                    android:id="@+id/btnDieuKhoan"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="ĐIỀU KHOẢN SỬ DỤNG"
                    android:backgroundTint="#E0E0E0"
                    android:textColor="#000000"
                    android:layout_marginEnd="8dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp" />

                <Button
                    android:id="@+id/btnBaoMat"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="CHÍNH SÁCH BẢO MẬT"
                    android:backgroundTint="#E0E0E0"
                    android:textColor="#000000"
                    android:layout_marginEnd="8dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp" />

                <Button
                    android:id="@+id/btnGiaoHang"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="CHÍNH SÁCH GIAO HÀNG"
                    android:backgroundTint="#E0E0E0"
                    android:textColor="#000000"
                    android:layout_marginEnd="8dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp" />

                <Button
                    android:id="@+id/btnDoiTra"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="CHÍNH SÁCH ĐỔI TRẢ"
                    android:backgroundTint="#E0E0E0"
                    android:textColor="#000000"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp" />
            </LinearLayout>
        </HorizontalScrollView>

        <!-- Hình minh họa -->
        <ImageView
            android:id="@+id/imgPolicy"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:src="@drawable/contact"
            android:scaleType="centerInside"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp" />

        <!-- Nội dung động -->
        <FrameLayout
            android:id="@+id/content_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
</ScrollView> 