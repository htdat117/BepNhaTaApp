<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_back"
                app:tint="@color/primary1"
                android:contentDescription="Back"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"/>

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Mục tiêu"
                android:textColor="@color/dark1"
                style="@style/Header.Ag3"
                android:gravity="center"/>

            <TextView
                android:id="@+id/btnNext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tiếp theo"
                android:textColor="@color/primary1"
                style="@style/Body.Bold.Ag4"
                android:layout_marginEnd="8dp"
                android:gravity="center_vertical"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/orange" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mục tiêu của bạn là gì"
            style="@style/Body.Regular.Ag3"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp" />
        <!-- Segment menu -->
        <LinearLayout
            android:id="@+id/segmentGoalType"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:padding="0dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnGeneralGoalTab"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Mục tiêu chung"
                android:textSize="14sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:background="@drawable/bg_segment_left_selector"
                android:textColor="@color/text_segment_selector"
                android:stateListAnimator="@null"
                android:paddingStart="0dp"
                android:paddingEnd="0dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                app:rippleColor="@android:color/transparent"
                app:backgroundTint="@null"
                style="@style/Body.Medium.Ag2"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSpecificGoalTab"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Mục tiêu cụ thể"
                android:textSize="14sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:background="@drawable/bg_segment_right_selector"
                android:textColor="@color/text_segment_selector"
                android:stateListAnimator="@null"
                android:paddingStart="0dp"
                android:paddingEnd="0dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                app:rippleColor="@android:color/transparent"
                app:backgroundTint="@null"
                style="@style/Body.Medium.Ag2"/>
        </LinearLayout>

    <FrameLayout
        android:id="@+id/goalContentContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        style="@style/PrimaryButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tiếp theo"
        android:layout_marginTop="24dp" />

    </LinearLayout>
</LinearLayout>