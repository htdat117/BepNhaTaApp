<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="16dp"
        android:paddingBottom="8dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_back"
            app:tint="@color/primary1"
            android:contentDescription="Back"/>

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Mục tiêu"
            android:textColor="@color/dark1"
            style="@style/Header.Ag3"
            android:gravity="center"/>

        <TextView
            android:id="@+id/btnNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tiếp theo"
            android:textColor="@color/primary1"
            style="@style/Body.Bold.Ag4"
            android:gravity="center_vertical"/>
    </LinearLayout>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/orange" />
        
    <!-- Scrollable content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mục tiêu của bạn là gì"
                style="@style/Body.Regular.Ag3"
                android:layout_gravity="center"
                android:layout_marginBottom="24dp" />
                
            <!-- Segment menu -->
            <LinearLayout
                android:id="@+id/segmentGoalType"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:padding="0dp"
                android:layout_marginBottom="16dp">
                
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnGeneralGoalTab"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Mục tiêu chung"
                    android:textSize="14sp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:background="@drawable/bg_segment_left_selector"
                    android:textColor="@color/text_segment_selector"
                    android:paddingStart="0dp"
                    android:paddingEnd="0dp"
                    style="@style/Body.Medium.Ag2"/>
                    
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSpecificGoalTab"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Mục tiêu cụ thể"
                    android:textSize="14sp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:background="@drawable/bg_segment_right_selector"
                    android:textColor="@color/text_segment_selector"
                    android:paddingStart="0dp"
                    android:paddingEnd="0dp"
                    style="@style/Body.Medium.Ag2"/>
            </LinearLayout>

            <FrameLayout
                android:id="@+id/goalContentContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
                
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Next Button -->
    <Button
        android:id="@+id/btnNextBottom"
        style="@style/PrimaryButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tiếp theo"
        android:layout_margin="24dp" />

</LinearLayout>