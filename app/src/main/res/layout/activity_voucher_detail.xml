<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFF">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#FF6B1A"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_back"
            android:layout_marginStart="8dp"
            android:contentDescription="Back" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Điểm tích lũy"
            android:textColor="#FFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginStart="16dp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Card Voucher -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="#FFF"
                app:cardStrokeColor="#FF6B1A"
                app:cardStrokeWidth="1dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_voucher_orange"
                        android:contentDescription="Voucher" />
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp">
                        <TextView
                            android:id="@+id/tvVoucherCode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="GIAM20%"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="#222" />
                        <TextView
                            android:id="@+id/tvVoucherDesc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="GIẢM 20% ĐƠN HÀNG CHÀO MỪNG THÁNG 4, GIẢM TỐI ĐA 60K"
                            android:textSize="13sp"
                            android:textColor="#222"
                            android:layout_marginTop="2dp" />
                    </LinearLayout>
                    <Button
                        android:id="@+id/btnExchange"
                        android:layout_width="96dp"
                        android:layout_height="40dp"
                        android:text="Đổi điểm"
                        android:textColor="#FFF"
                        android:backgroundTint="#FF6B1A"
                        android:textStyle="bold"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="0dp" />
                </LinearLayout>
                <TextView
                    android:id="@+id/tvVoucherPoint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="500 điểm"
                    android:textColor="#FF2D2D"
                    android:textStyle="bold"
                    android:drawableStart="@drawable/ic_point"
                    android:layout_marginStart="16dp"
                    android:layout_marginBottom="8dp"
                    android:layout_gravity="start" />
            </androidx.cardview.widget.CardView>

            <!-- Thông tin chi tiết -->
            <TextView android:text="Hạn sử dụng mã" style="@style/TitleInfo" />
            <TextView android:id="@+id/tvVoucherTime" android:text="Từ ngày 01/04/2025 đến 30/04/2025. Áp dụng trong khung giờ 10:00 – 22:00 mỗi ngày." style="@style/ContentInfo" />
            <TextView android:text="Ưu đãi" style="@style/TitleInfo" />
            <TextView android:id="@+id/tvVoucherBenefit" android:text="Giảm ngay 20% tổng giá trị đơn hàng, tối đa 60.000đ cho mỗi đơn hàng." style="@style/ContentInfo" />
            <TextView android:text="Áp dụng cho sản phẩm" style="@style/TitleInfo" />
            <TextView android:id="@+id/tvVoucherProduct" android:text="Tất cả các món ăn có mặt trên ứng dụng Bếp Nhà Ta..." style="@style/ContentInfo" />
            <TextView android:text="Phương thức thanh toán" style="@style/TitleInfo" />
            <TextView android:id="@+id/tvVoucherPayment" android:text="Áp dụng khi thanh toán qua:..." style="@style/ContentInfo" />
            <TextView android:text="Đơn vị vận chuyển" style="@style/TitleInfo" />
            <TextView android:id="@+id/tvVoucherShipping" android:text="Áp dụng với mọi đơn vị vận chuyển đối tác..." style="@style/ContentInfo" />
            <TextView android:text="Thiết bị" style="@style/TitleInfo" />
            <TextView android:id="@+id/tvVoucherDevice" android:text="Chỉ áp dụng khi đặt hàng thông qua app..." style="@style/ContentInfo" />
            <TextView android:text="Điều kiện" style="@style/TitleInfo" />
            <TextView android:id="@+id/tvVoucherCondition" android:text="• Mỗi tài khoản chỉ được sử dụng 1 lần..." style="@style/ContentInfo" />
        </LinearLayout>
    </ScrollView>

    <!-- Bottom navigation -->
    <include layout="@layout/layout_bottom_navigation" />
</LinearLayout> 