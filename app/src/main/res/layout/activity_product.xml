<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".features.products.ProductActivity"
    android:orientation="vertical">

    <!-- Placeholder for Custom Header View -->
    <include layout="@layout/layout_custom_header"
        android:id="@+id/custom_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- Thanh danh mục ngang -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvCategories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="24dp"
        android:paddingBottom="16dp"
        android:background="#FFDECE"
        android:orientation="horizontal"/>

    <!-- Sắp xếp -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="24dp"
            android:paddingVertical="16dp"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sắp xếp theo: "
                android:textColor="@color/dark1"
                android:textSize="@dimen/body2"/>
            <TextView
                android:id="@+id/tvSortOption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cao nhất - Thấp nhất"
                android:textColor="@color/primary1"
                android:textStyle="bold"
                android:textSize="@dimen/body2"/>
            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/ic_arrow_down"
                android:layout_marginLeft="8dp"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/btnFilterProduct"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_filter"
            android:layout_marginRight="24dp"/>
    </LinearLayout>

    <!-- Danh sách sản phẩm -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvProducts"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:paddingLeft="24dp"
        android:paddingRight="24dp" />

    <!-- Bottom Navigation Bar -->
    <include layout="@layout/layout_bottom_navigation"
        android:id="@+id/bottom_navigation_container"/>

</LinearLayout>