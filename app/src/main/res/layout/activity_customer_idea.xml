<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="16dp"
    tools:context=".features.customeridea.CustomerIdeaActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_gravity="center_horizontal"
        android:paddingHorizontal="16dp"
        android:src="@drawable/ic_customer_idea_banner" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ý KIẾN CỦA QUÝ KHÁCH LÀ CƠ HỘI ĐỂ CHÚNG TÔI CẢI TIẾN CHẤT LƯỢNG DỊCH VỤ "
        android:textSize="@dimen/body2"
        android:fontFamily="@font/inter_medium"
        android:gravity="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_medium"
        android:paddingTop="24dp"
        android:paddingHorizontal="16dp"
        android:text="Họ Tên"
        android:textSize="@dimen/body2" />

    <EditText
        android:id="@+id/edtName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:layout_marginHorizontal="16dp"
        android:backgroundTint="@color/primary4"
        android:hint="Vui lòng nhập"
        android:textColorHint="#757575"
        android:textColor="#222"
        android:gravity="center_vertical"
        android:textSize="16sp"
        android:background="@color/primary4"
        android:padding="12dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_medium"
        android:paddingTop="8dp"
        android:paddingHorizontal="16dp"
        android:text="Điện thoại"
        android:textSize="@dimen/body2" />
    <EditText
        android:id="@+id/edtPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:layout_marginHorizontal="16dp"
        android:backgroundTint="@color/primary4"
        android:hint="Vui lòng nhập"
        android:textColorHint="#757575"
        android:textColor="#222"
        android:gravity="center_vertical"
        android:textSize="16sp"
        android:background="@color/primary4"
        android:padding="12dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_medium"
        android:paddingTop="8dp"
        android:paddingHorizontal="16dp"
        android:text="Email"
        android:textSize="@dimen/body2" />
    <EditText
        android:id="@+id/edtEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:layout_marginHorizontal="16dp"
        android:backgroundTint="@color/primary4"
        android:hint="Vui lòng nhập"
        android:textColorHint="#757575"
        android:textColor="#222"
        android:gravity="center_vertical"
        android:textSize="16sp"
        android:background="@color/primary4"
        android:padding="12dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_medium"
        android:paddingTop="8dp"
        android:paddingHorizontal="16dp"
        android:text="Vấn đề"
        android:textSize="@dimen/body2" />
    <EditText
        android:id="@+id/edtProblem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:layout_marginHorizontal="16dp"
        android:backgroundTint="@color/primary4"
        android:hint="Vui lòng nhập"
        android:textColorHint="#757575"
        android:textColor="#222"
        android:gravity="center_vertical"
        android:textSize="16sp"
        android:background="@color/primary4"
        android:padding="12dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_medium"
        android:paddingTop="8dp"
        android:paddingHorizontal="16dp"
        android:text="Nội dung"
        android:textSize="@dimen/body2" />
    <EditText
        android:id="@+id/edtContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:layout_marginHorizontal="16dp"
        android:backgroundTint="@color/primary4"
        android:hint="Vui lòng nhập"
        android:textColorHint="#757575"
        android:textColor="#222"
        android:gravity="center_vertical"
        android:textSize="16sp"
        android:background="@color/primary4"
        android:padding="12dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_medium"
        android:paddingTop="8dp"
        android:paddingHorizontal="16dp"
        android:text="Hình ảnh"
        android:textSize="@dimen/body2" />
</LinearLayout>