<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header cam, icon back ngoài, tiêu đề căn giữa -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="#E7642F">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="12dp"
                android:src="@drawable/ic_back"
                android:contentDescription="Quay lại" />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="CHÍNH SÁCH ĐỔI TRẢ"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#FFFFFF" />
        </RelativeLayout>

        <!-- Nút điều hướng: HorizontalScrollView chứa 4 nút -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:scrollbars="none"
            android:layout_marginTop="0dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingLeft="16dp">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="ĐIỀU KHOẢN SỬ DỤNG"
                    android:backgroundTint="#E0E0E0"
                    android:textColor="#000000"
                    android:layout_marginEnd="8dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="CHÍNH SÁCH BẢO MẬT"
                    android:backgroundTint="#E0E0E0"
                    android:textColor="#000000"
                    android:layout_marginEnd="8dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="CHÍNH SÁCH GIAO HÀNG"
                    android:backgroundTint="#E0E0E0"
                    android:textColor="#000000"
                    android:layout_marginEnd="8dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="CHÍNH SÁCH ĐỔI TRẢ"
                    android:backgroundTint="#FF6D3D"
                    android:textColor="#FFFFFF"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp" />
            </LinearLayout>
        </HorizontalScrollView>

        <!-- Hình minh họa -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:src="@drawable/contact"
            android:scaleType="centerInside"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp" />

        <!-- Nội dung chính sách đổi trả -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1. Điều kiện áp dụng đổi/trả"
            android:textColor="#000000"
            android:textSize="15sp"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sản phẩm bị giao sai món, món bị hư hỏng, đổ vỡ trong quá trình vận chuyển.\nKhách hàng cần phản hồi trong vòng 30 phút kể từ khi nhận hàng."
            android:textColor="#000000"
            android:textSize="15sp"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2. Quy trình xử lý"
            android:textColor="#000000"
            android:textSize="15sp"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gửi hình ảnh/video xác nhận lỗi sản phẩm qua khung chat hỗ trợ trong app.\nĐội ngũ CSKH xác nhận lỗi và phản hồi trong 15 phút."
            android:textColor="#000000"
            android:textSize="15sp"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3. Hình thức hoàn tiền/đổi món"
            android:textColor="#000000"
            android:textSize="15sp"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đổi lại món tương đương (miễn phí giao lại).\nHoàn tiền vào Ví Bếp Nhà Ta trong vòng 24 giờ.\nKhông hoàn tiền mặt hoặc chuyển khoản ngân hàng."
            android:textColor="#000000"
            android:textSize="15sp"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="4. Trường hợp không được đổi trả"
            android:textColor="#000000"
            android:textSize="15sp"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Món đã được sử dụng quá 50%.\nKhách cung cấp thông tin không hợp lệ hoặc phản hồi quá hạn.\nKhông đúng lỗi từ phía hệ thống/cửa hàng."
            android:textColor="#000000"
            android:textSize="15sp"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="12dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp" />

    </LinearLayout>
</ScrollView> 