<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/primary1"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_circle_left_back"
            android:contentDescription="Back" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Chi tiết địa chỉ"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Thông tin liên hệ -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thông tin liên hệ"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="4dp"/>

            <!-- Họ và tên -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/bg_edittext_outline_orange_pmr4"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="8dp"
                android:paddingEnd="8dp"
                android:paddingStart="8dp">

                <EditText
                    android:id="@+id/edt_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:hint="Họ và tên"
                    android:paddingStart="10dp"
                    android:paddingEnd="40dp"
                    android:textSize="16sp" />

                <ImageButton
                    android:id="@+id/btn_clear_name"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/delete_all"
                    android:background="@android:color/transparent"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>

            <!-- Số điện thoại -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/bg_edittext_outline_orange_pmr4"
                android:layout_marginBottom="8dp"
                android:paddingEnd="8dp"
                android:paddingStart="8dp">

                <EditText
                    android:id="@+id/edt_phone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:hint="Số điện thoại"
                    android:inputType="phone"
                    android:paddingStart="10dp"
                    android:paddingEnd="40dp"
                    android:textSize="16sp" />

                <ImageButton
                    android:id="@+id/btn_clear_phone"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/delete_all"
                    android:background="@android:color/transparent"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>

            <!-- Địa chỉ -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Địa chỉ"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="4dp"/>

            <!-- Tỉnh/Thành phố -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/bg_edittext_outline_orange_pmr4"
                android:layout_marginBottom="8dp"
                android:paddingEnd="8dp"
                android:paddingStart="8dp">

                <EditText
                    android:id="@+id/edt_province"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:hint="Tỉnh/Thành phố"
                    android:paddingStart="10dp"
                    android:paddingEnd="40dp"
                    android:textSize="16sp" />

                <ImageButton
                    android:id="@+id/btn_clear_province"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/delete_all"
                    android:background="@android:color/transparent"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>

            <!-- Quận/Huyện -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/bg_edittext_outline_orange_pmr4"
                android:layout_marginBottom="8dp"
                android:paddingEnd="8dp"
                android:paddingStart="8dp">

                <EditText
                    android:id="@+id/edt_district"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:hint="Quận/Huyện"
                    android:paddingStart="10dp"
                    android:paddingEnd="40dp"
                    android:textSize="16sp" />

                <ImageButton
                    android:id="@+id/btn_clear_district"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/delete_all"
                    android:background="@android:color/transparent"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>

            <!-- Số nhà, tên đường,... -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/bg_edittext_outline_orange_pmr4"
                android:layout_marginBottom="8dp"
                android:paddingEnd="8dp"
                android:paddingStart="8dp">

                <EditText
                    android:id="@+id/edt_address"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:hint="Số nhà, tên đường,..."
                    android:paddingStart="10dp"
                    android:paddingEnd="40dp"
                    android:textSize="16sp" />

                <ImageButton
                    android:id="@+id/btn_clear_address"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/delete_all"
                    android:background="@android:color/transparent"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>

            <!-- Ghi chú -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ghi chú"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="4dp"/>

            <EditText
                android:id="@+id/edt_note"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:hint="Giao đầu hẻm anh ra lấy"
                android:background="@drawable/bg_edittext_outline_orange_pmr4"
                android:textSize="16sp"
                android:gravity="top"
                android:layout_marginBottom="8dp"
                android:padding="8dp" />

            <!-- Nút Xóa và Lưu -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp">

                <Button
                    android:id="@+id/btn_delete"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Xóa địa chỉ"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:background="@drawable/bg_button_outline_orange"
                    android:textColor="@color/primary1"
                    android:layout_marginEnd="16dp"/>

                <Button
                    android:id="@+id/btn_save"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Lưu thông tin"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:background="@drawable/bg_badge_orange"
                    android:textColor="@android:color/white"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Bottom navigation -->
    <include
        layout="@layout/layout_bottom_navigation"
        android:id="@+id/bottom_navigation_container"/>
</LinearLayout>