<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/primary1"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="8dp"
    android:paddingBottom="12dp"
    android:orientation="vertical"
    android:fitsSystemWindows="true">

    <!-- Top Row: Logo, Đăng nhập, Icons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_logo"/>

        <TextView
            android:id="@+id/tv_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đăng nhập"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginStart="8dp"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <!-- Cart with badge -->
        <FrameLayout
            android:id="@+id/container_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp">
            <ImageView
                android:id="@+id/iv_cart"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_cart_header"/>
            <TextView
                android:id="@+id/tv_badge_cart"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="end|top"
                android:background="@drawable/bg_badge_white"
                android:textColor="@color/primary1"
                android:textStyle="bold"
                android:textSize="10sp"
                android:gravity="center"
                android:visibility="gone"/>
        </FrameLayout>

        <!-- Message icon -->
        <ImageView
            android:id="@+id/iv_message"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_message"
            android:layout_marginEnd="12dp"/>

        <!-- Notification with badge -->
        <FrameLayout
            android:id="@+id/container_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_notification"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_notification"/>
            <TextView
                android:id="@+id/tv_badge_noti"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="end|top"
                android:background="@drawable/bg_badge_white"
                android:textColor="@color/primary1"
                android:textSize="10sp"
                android:textStyle="bold"
                android:gravity="center"
                android:visibility="gone"/>
        </FrameLayout>

    </LinearLayout>

    <!-- Search Bar -->
    <EditText
        android:id="@+id/et_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tìm kiếm"
        android:textColorHint="@color/dark2"
        android:textSize="@dimen/body2"
        android:fontFamily="@font/inter_medium"
        android:textColor="@color/dark2"
        android:padding="10dp"
        android:background="@drawable/search_bar_background"
        android:drawableEnd="@drawable/ic_search"
        android:drawablePadding="8dp"/>

</LinearLayout> 