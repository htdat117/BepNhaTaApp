<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp">

    <ImageView
        android:id="@+id/imgBlogHeader"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:scaleType="centerCrop"
        android:src="@drawable/blog" />

    <TextView
        android:id="@+id/tvTitleHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tiêu đề blog lớn"
        android:textStyle="bold"
        android:textColor="@color/dark1"
        android:textSize="18sp"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/tvDescHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mô tả ngắn blog lớn"
        style="@style/Body.Medium.Ag2"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/tvCategoryHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mẹo hay - Nấu chuẩn"
        android:textSize="13sp"
        android:textColor="#888888"
        android:layout_marginTop="4dp"/>

    <ImageView
        android:id="@+id/imgFavoriteHeader"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="end"
        android:src="@drawable/ic_like"
        android:layout_marginTop="4dp"/>
</LinearLayout> 