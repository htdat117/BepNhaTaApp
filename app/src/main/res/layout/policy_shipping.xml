<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1. Thời gian giao hàng"
        android:textColor="#000000"
        android:textSize="15sp"
        android:lineSpacingExtra="4dp"
        android:layout_marginBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Giao trong vòng 45 – 60 phút kể từ khi đơn được xác nhận.\nGiờ hoạt động: 9h00 – 21h00, tất cả các ngày trong tuần."
        android:textColor="#000000"
        android:textSize="15sp"
        android:lineSpacingExtra="4dp"
        android:layout_marginBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2. Phạm vi giao hàng"
        android:textColor="#000000"
        android:textSize="15sp"
        android:lineSpacingExtra="4dp"
        android:layout_marginBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Áp dụng tại TP.HCM, Hà Nội và các khu vực nội thành được hỗ trợ.\nBếp Nhà Ta sẽ từ chối đơn hàng ở ngoài phạm vi hỗ trợ."
        android:textColor="#000000"
        android:textSize="15sp"
        android:lineSpacingExtra="4dp"
        android:layout_marginBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="3. Đơn vị vận chuyển"
        android:textColor="#000000"
        android:textSize="15sp"
        android:lineSpacingExtra="4dp"
        android:layout_marginBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đối tác: GrabExpress, AhaMove, Giao Hàng Nhanh.\nTrong trường hợp hệ thống không tự động bắt shipper, CSKH sẽ hỗ trợ gọi đơn thủ công."
        android:textColor="#000000"
        android:textSize="15sp"
        android:lineSpacingExtra="4dp"
        android:layout_marginBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="4. Phí giao hàng"
        android:textColor="#000000"
        android:textSize="15sp"
        android:lineSpacingExtra="4dp"
        android:layout_marginBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tính theo khoảng cách và đơn vị vận chuyển.\nMiễn phí ship cho khách có mã khuyến mãi hoặc khách hàng thuộc rank Bếp Chính trở lên."
        android:textColor="#000000"
        android:textSize="15sp"
        android:lineSpacingExtra="4dp"
        android:layout_marginBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="5. Theo dõi đơn hàng"
        android:textColor="#000000"
        android:textSize="15sp"
        android:lineSpacingExtra="4dp"
        android:layout_marginBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Khách hàng có thể theo dõi trạng thái đơn hàng trực tiếp trong ứng dụng (tab 'Đơn của tôi')."
        android:textColor="#000000"
        android:textSize="15sp"
        android:lineSpacingExtra="4dp"
        android:layout_marginBottom="12dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp" />

</LinearLayout> 