<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header cam, icon back ngoài, tiêu đề căn giữa -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="#E7642F">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="12dp"
                android:src="@drawable/baseline_arrow_back_24"
                android:contentDescription="Quay lại" />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="CHÍNH SÁCH BẢO MẬT"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#FFFFFF" />
        </RelativeLayout>

        <!-- Nút điều hướng: HorizontalScrollView chứa 4 nút -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:scrollbars="none"
            android:layout_marginTop="0dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingLeft="16dp">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="ĐIỀU KHOẢN SỬ DỤNG"
                    android:backgroundTint="#E0E0E0"
                    android:textColor="#000000"
                    android:layout_marginEnd="8dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="CHÍNH SÁCH BẢO MẬT"
                    android:backgroundTint="#FF6D3D"
                    android:textColor="#FFFFFF"
                    android:layout_marginEnd="8dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="CHÍNH SÁCH GIAO HÀNG"
                    android:backgroundTint="#E0E0E0"
                    android:textColor="#000000"
                    android:layout_marginEnd="8dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="CHÍNH SÁCH ĐỔI TRẢ"
                    android:backgroundTint="#E0E0E0"
                    android:textColor="#000000"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp" />
            </LinearLayout>
        </HorizontalScrollView>

        <!-- Hình minh họa -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:src="@drawable/contract"
            android:scaleType="centerInside"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp" />

        <!-- Nội dung chính sách bảo mật -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1. Phạm vi áp dụng"
            android:textColor="#000000"
            android:textSize="15sp"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chính sách này áp dụng cho:\n- Người dùng cài đặt và sử dụng app Bếp Nhà Ta.\n- Đối tác bán hàng, người cung cấp món ăn trên nền tảng.\n- Bất kỳ cá nhân nào truy cập website chính thức của chúng tôi."
            android:textColor="#000000"
            android:textSize="15sp"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2. Thông tin thu thập"
            android:textColor="#000000"
            android:textSize="15sp"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chúng tôi có thể thu thập các loại thông tin sau:\n2.1. Thông tin cá nhân\n- Họ và tên\n- Số điện thoại\n- Địa chỉ giao hàng\n- Email\n- Hình ảnh đại diện (nếu cung cấp)\n2.2. Thông tin thanh toán\n- Phương thức thanh toán đã chọn\n- Không lưu trữ trực tiếp thông tin thẻ tín dụng, thẻ ATM nội địa\n2.3. Thông tin kỹ thuật\n- Loại thiết bị, hệ điều hành, trình duyệt\n- Địa chỉ IP\n- Cookie và hành vi sử dụng trên ứng dụng/website\n2.4. Thông tin vị trí\n- Khi bạn cho phép ứng dụng truy cập vị trí GPS để gợi ý người bán gần bạn"
            android:textColor="#000000"
            android:textSize="15sp"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3. Mục đích sử dụng thông tin"
            android:textColor="#000000"
            android:textSize="15sp"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thông tin được thu thập sẽ được dùng vào các mục đích sau:\n- Xử lý đơn hàng và giao hàng\n- Hỗ trợ người dùng, phản hồi khiếu nại\n- Gửi thông báo về chương trình khuyến mãi, cập nhật dịch vụ\n- Cải thiện giao diện và hiệu năng của ứng dụng\n- Ngăn chặn hành vi gian lận, bảo mật tài khoản"
            android:textColor="#000000"
            android:textSize="15sp"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="4. Lưu trữ và bảo mật dữ liệu"
            android:textColor="#000000"
            android:textSize="15sp"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="4.1. Thời gian lưu trữ\n- Thông tin người dùng được lưu trữ trong hệ thống đến khi bạn yêu cầu xoá tài khoản, trừ khi có quy định pháp lý khác.\n4.2. Biện pháp bảo mật\n- Sử dụng mã hóa SSL/TLS cho dữ liệu truyền tải.\n- Lưu trữ dữ liệu trên hệ thống có kiểm soát truy cập nghiêm ngặt.\n- Định kỳ đánh giá, cập nhật hệ thống bảo mật."
            android:textColor="#000000"
            android:textSize="15sp"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="5. Chia sẻ thông tin với bên thứ ba"
            android:textColor="#000000"
            android:textSize="15sp"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chúng tôi không chia sẻ thông tin cá nhân của bạn với bên thứ ba, ngoại trừ:\n- Các đối tác vận chuyển để giao hàng.\n- Cơ quan chức năng khi có yêu cầu hợp pháp.\n- Bên xử lý thanh toán được uỷ quyền."
            android:textColor="#000000"
            android:textSize="15sp"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="6. Quyền của người dùng"
            android:textColor="#000000"
            android:textSize="15sp"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bạn có quyền:\n- Yêu cầu truy cập, chỉnh sửa hoặc xoá dữ liệu cá nhân.\n- Rút lại sự đồng ý cho phép xử lý dữ liệu.\n- Phản hồi hoặc khiếu nại về chính sách này qua email hotro@bepnhata.vn."
            android:textColor="#000000"
            android:textSize="15sp"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="7. Cookie và công nghệ theo dõi"
            android:textColor="#000000"
            android:textSize="15sp"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chúng tôi sử dụng cookie để:\n- Ghi nhớ thông tin đăng nhập\n- Phân tích hành vi sử dụng app\n- Cá nhân hóa nội dung hiển thị\nBạn có thể từ chối cookie trong phần cài đặt trình duyệt, tuy nhiên một số tính năng có thể không hoạt động đầy đủ."
            android:textColor="#000000"
            android:textSize="15sp"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="8. Cập nhật chính sách"
            android:textColor="#000000"
            android:textSize="15sp"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chính sách bảo mật có thể được cập nhật để phù hợp với thay đổi pháp luật hoặc cải tiến dịch vụ. Khi có thay đổi, chúng tôi sẽ thông báo trong app và/hoặc qua email."
            android:textColor="#000000"
            android:textSize="15sp"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="9. Thông tin liên hệ"
            android:textColor="#000000"
            android:textSize="15sp"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Công ty phát triển ứng dụng Bếp Nhà Ta\nEmail: hotro@bepnhata.vn\nHotline: 1900 1234\nTrụ sở: 669 Đỗ Mười, Khu phố 6, Phường Linh Xuân, TP. Thủ Đức, TP. Hồ Chí Minh"
            android:textColor="#000000"
            android:textSize="15sp"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="12dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp" />

    </LinearLayout>
</ScrollView> 