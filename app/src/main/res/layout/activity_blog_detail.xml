<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- Header -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/primary1">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="12dp"
            android:src="@drawable/ic_back_arrow"
            android:contentDescription="Quay lại" />

        <TextView
            android:id="@+id/tvToolbarTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Blog"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#FFFFFF" />
    </RelativeLayout>

    <!-- Nội dung chính -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="0dp"
        android:clipToPadding="false"
        android:layout_marginTop="56dp"
        android:layout_marginBottom="56dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white">

            <!-- Tiêu đề, ngày, lượt thích, chia sẻ -->
            <TextView
                android:id="@+id/tvCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mẹo hay - Nấu chuẩn"
                android:textColor="#6F6F6F"
                android:textSize="14sp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"/>
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thực đơn 3 món ngon cho bữa tối mùa đông se lạnh"
                android:textColor="@color/dark1"
                style="@style/Header.Ag3"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="8dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"/>
            <TextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="31/3/2025"
                android:textColor="#BFBFBF"
                android:textSize="12sp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"/>

            <!-- Like, comment, share -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">
                <ImageView android:id="@+id/ivLike"
                    android:src="@drawable/ic_like"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>
                <TextView android:id="@+id/tvLike"
                    android:text="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:textColor="#6F6F6F"/>
                <ImageView android:id="@+id/ivComment"
                    android:src="@drawable/ic_cmt"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="16dp"/>
                <TextView android:id="@+id/tvComment"
                    android:text="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:textColor="#6F6F6F"/>
                <ImageView android:id="@+id/ivFavorite"
                    android:src="@drawable/ic_favorite_unchecked"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="16dp"/>
            </LinearLayout>

            <!-- Ảnh minh họa lớn -->

            <ImageView
                android:id="@+id/imgMain"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginTop="12dp"
                android:scaleType="centerCrop"
           />

            <!-- Nội dung bài viết -->
            <TextView
                android:id="@+id/tvContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nội dung bài viết..."
                android:textSize="16sp"
                android:layout_marginTop="12dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"/>

            <!-- Tiêu đề bình luận với nút Tất cả -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvCommentCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bình luận (0)"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:paddingVertical="8dp"
                    android:layout_marginStart="8dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_vertical"
                    android:gravity="end">

                    <TextView
                        android:id="@+id/tvSeeAllComments"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tất cả"
                        android:textSize="14sp"
                        android:textColor="@color/dark2"
                        android:layout_gravity="center_vertical"/>

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_right_arrow_gray"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="4dp" />
                </LinearLayout>
            </LinearLayout>
            <!-- Danh sách bình luận -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvComments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"/>
            <!-- Nhập bình luận mới -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#F6F6F6"
                android:padding="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:gravity="center_vertical"
                android:layout_alignParentBottom="true">

                <EditText
                    android:id="@+id/edtComment"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_comment_input"
                    android:hint="Chia sẻ cảm nhận của bạn"
                    android:textColorHint="#B0B0B0"
                    android:textColor="#222"
                    android:padding="10dp"
                    android:textSize="14sp"
                    android:singleLine="true"/>

                <ImageButton
                    android:id="@+id/btnSendComment"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_send"
                    android:background="@android:color/transparent"
                    android:contentDescription="Gửi bình luận"
                    android:tint="#EA5C2B"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>

            <!-- Divider after comments -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#EEEEEE"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="0dp"/>

            <!-- Gợi ý bài viết liên quan (Moved back inside NestedScrollView) -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:layout_marginBottom="56dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Có thể bạn sẽ thích"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/dark1"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:layout_marginBottom="8dp"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvSuggest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"/>
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Bottom Navigation Bar -->
    <include
        android:id="@+id/bottom_navigation"
        layout="@layout/layout_bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_gravity="bottom" />

</androidx.coordinatorlayout.widget.CoordinatorLayout> 