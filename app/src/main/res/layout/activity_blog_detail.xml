<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- AppBar -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/primary1"
            android:title="Blog"
            android:titleTextColor="@android:color/white"/>
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Nội dung chính -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:padding="0dp"
        android:clipToPadding="false"
        android:layout_marginBottom="120dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Tiêu đề, ngày, lượt thích, chia sẻ -->
            <TextView
                android:id="@+id/tvCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mẹo hay - Nấu chuẩn"
                android:textColor="#6F6F6F"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thực đơn 3 món ngon cho bữa tối mùa đông se lạnh"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="8dp"/>
            <TextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="31/3/2025"
                android:textColor="#BFBFBF"
                android:textSize="12sp"/>

            <!-- Like, comment, share -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical">
                <ImageView android:id="@+id/ivLike" android:src="@drawable/ic_like" android:layout_width="20dp" android:layout_height="20dp"/>
                <TextView android:id="@+id/tvLike" android:text="20" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginStart="4dp" android:textColor="#6F6F6F"/>
                <ImageView android:id="@+id/ivComment" android:src="@drawable/ic_comment" android:layout_width="20dp" android:layout_height="20dp" android:layout_marginStart="16dp"/>
                <TextView android:id="@+id/tvComment" android:text="0" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginStart="4dp" android:textColor="#6F6F6F"/>
                <ImageView android:id="@+id/ivShare" android:src="@drawable/ic_share" android:layout_width="20dp" android:layout_height="20dp" android:layout_marginStart="16dp"/>
            </LinearLayout>

            <!-- Ảnh minh họa lớn -->
            <ImageView
                android:id="@+id/imgMain"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:scaleType="centerCrop"
                android:layout_marginTop="12dp"
                android:src="@drawable/img_blog_main"/>

            <!-- Nội dung bài viết -->
            <TextView
                android:id="@+id/tvContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nội dung bài viết..."
                android:textSize="16sp"
                android:layout_marginTop="12dp"/>

            <!-- Bình luận -->
            <TextView
                android:text="Bình luận (20)"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="24dp"/>
            <!-- Danh sách bình luận -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvComments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"/>
            <!-- Nhập bình luận mới -->
            <EditText
                android:id="@+id/edtComment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Chia sẻ cảm nhận của bạn"
                android:background="@drawable/bg_edittext_outline_orange"
                android:layout_marginTop="8dp"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Gợi ý bài viết liên quan -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@android:color/white"
        android:padding="8dp"
        android:layout_marginBottom="56dp">
      
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvSuggest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout> 