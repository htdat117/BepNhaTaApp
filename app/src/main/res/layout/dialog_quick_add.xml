<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    app:cardCornerRadius="24dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- drag indicator -->
        <View
            android:layout_width="60dp"
            android:layout_height="4dp"
            android:background="@color/dark3"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp"
            android:backgroundTint="@color/dark4"/>

        <!-- product row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imgProduct"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:scaleType="centerCrop"
                android:src="@drawable/sample_img"
                android:background="@drawable/rounded_img_16"
                android:clipToOutline="true" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="12dp">

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sườn nướng mật ong"
                    android:textStyle="bold"
                    android:textSize="18sp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:id="@+id/tvPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="80.000đ"
                        android:textColor="@color/primary1"
                        android:textSize="16sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/tvOldPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="90.000đ"
                        android:textSize="14sp"
                        android:textColor="@color/dark2"
                        android:layout_marginStart="8dp"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tvStock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kho: 80"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"/>

                <!-- serving selector -->
                <com.google.android.material.button.MaterialButtonToggleGroup
                    android:id="@+id/toggleServing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:singleSelection="true"
                    app:checkedButton="@id/btnServing2">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnServing2"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="2 người"
                        android:textSize="14sp"
                        app:cornerRadius="16dp"
                        app:iconGravity="textStart"
                        app:checkedIcon="@null"
                        app:backgroundTint="@color/segmented_bg"
                        android:textColor="@color/segmented_text"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnServing4"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="4 người"
                        android:textSize="14sp"
                        app:cornerRadius="16dp"
                        app:iconGravity="textStart"
                        app:checkedIcon="@null"
                        app:backgroundTint="@color/segmented_bg"
                        android:textColor="@color/segmented_text"/>

                </com.google.android.material.button.MaterialButtonToggleGroup>
            </LinearLayout>
        </LinearLayout>

        <!-- description title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mô tả món ăn"
            android:textStyle="bold"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/tvDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sườn nướng mật ong là món ăn thơm ngon với sườn heo..."
            android:layout_marginTop="4dp"/>

        <!-- nutrition grid -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:layout_marginTop="16dp">

            <!-- item template repeated 4 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="12dp"
                android:gravity="center_vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginEnd="60dp">
                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_carb"
                            android:background="@drawable/rounded_bg_primary4"
                            android:padding="8dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="142g carbs"
                            android:textSize="@dimen/body2"
                            android:gravity="center_vertical"
                            android:layout_marginStart="8dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_protein"
                            android:background="@drawable/rounded_bg_primary4"
                            android:padding="4dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="70g proteins"
                            android:textSize="@dimen/body2"
                            android:gravity="center_vertical"
                            android:layout_marginStart="8dp"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginEnd="60dp">
                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_calo"
                            android:background="@drawable/rounded_bg_primary4"
                            android:padding="8dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="142g carbs"
                            android:textSize="@dimen/body2"
                            android:gravity="center_vertical"
                            android:layout_marginStart="8dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_fat"
                            android:background="@drawable/rounded_bg_primary4"
                            android:padding="8dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="68g fat"
                            android:textSize="@dimen/body2"
                            android:gravity="center_vertical"
                            android:layout_marginStart="8dp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <!-- replicate other 3 items omitted for brevity -->
        </GridLayout>

        <!-- quantity -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="Số lượng"
                android:textStyle="bold"
                android:layout_weight="1"/>

            <!-- Quantity control -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="16dp"
                android:background="@drawable/bg_quantity_box"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/btnMinus"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_remove"/>

                <TextView
                    android:id="@+id/tvQuantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:layout_marginHorizontal="8dp"/>

                <ImageView
                    android:id="@+id/btnPlus"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_add"/>
            </LinearLayout>
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="16dp">
        <!-- total -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tổng cộng"
            android:textStyle="bold"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/tvTotalPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="80.000đ"
            android:textColor="@color/primary1"
            android:textStyle="bold"
            android:textSize="20sp"/>
    </LinearLayout>

        <!-- bottom buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <ImageView
                android:id="@+id/btnDialogAddCart"
                android:layout_width="80dp"
                android:layout_height="56dp"
                android:src="@drawable/ic_addtocart"
                android:background="@drawable/button_orange_rounded"
                android:padding="12dp"/>

            <Button
                android:id="@+id/btnDialogBuyNow"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="Mua ngay"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:background="@drawable/button_orange_rounded"
                android:layout_marginStart="12dp"/>
        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView> 