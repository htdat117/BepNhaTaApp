<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <!-- Header cam -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/primary1">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="12dp"
            android:src="@drawable/ic_back_arrow"
            android:contentDescription="Quay lại" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Điểm tích lũy"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/tvHistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            android:text="Lịch sử"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Khung cấp bậc -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/bg_voucher_detail_border"
                android:padding="12dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/imgRank"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:contentDescription="Rank"
                    android:src="@drawable/ic_point_logo" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:id="@+id/tvRankName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tân thủ"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="#222222" />

                    <TextView
                        android:id="@+id/tvRankPoint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="15sp"
                        android:textColor="#222222"
                        android:layout_marginTop="2dp"/>

                    <ProgressBar
                        android:id="@+id/progressRank"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:progress="80"
                        android:max="100"
                        android:progressDrawable="@drawable/bg_progress_orange"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="6dp"/>

                    <TextView
                        android:id="@+id/tvRankNote"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cần tích lũy thêm 99 điểm nữa để nâng lên Phụ Bếp"
                        android:textSize="14sp"
                        android:textColor="#222222"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Tổng điểm -->
            <TextView
                android:id="@+id/tvTotalPoint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/primary1"
                android:textStyle="bold"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="8dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnExchange"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="Đổi điểm quà tặng"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:backgroundTint="@color/primary1"
                android:background="@drawable/bg_button_rounded_orange"
                android:textSize="17sp"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:paddingLeft="32dp"
                android:paddingRight="32dp"/>

            <!-- Lịch sử điểm -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_history_card"
                android:orientation="vertical"
                android:padding="12dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lịch sử"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:textColor="#222222"
                    android:layout_marginBottom="8dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvPointHistory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:overScrollMode="never"
                    android:clipToPadding="false"
                    android:paddingBottom="8dp"/>
            </LinearLayout>

            <!-- Nếu không có điểm, hiển thị icon cute và thông báo động viên -->
            <LinearLayout
                android:id="@+id/layoutNoPoint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="24dp"
                android:visibility="gone">
                <ImageView
                    android:id="@+id/imgNoPoint"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:src="@drawable/ic_smile"
                    android:contentDescription="Chưa có điểm"
                    android:layout_gravity="center"/>
                <TextView
                    android:id="@+id/tvNoPointMsg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bạn chưa có điểm nào. Hãy tham gia các hoạt động như đặt món, đánh giá, chia sẻ... để tích lũy điểm nhé!"
                    android:textColor="@color/primary1"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:layout_marginTop="12dp"/>
            </LinearLayout>

            <!-- Quà tặng hấp dẫn dành cho bạn -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Quà tặng hấp dẫn dành cho bạn"
                android:textStyle="bold"
                android:textSize="17sp"
                android:textColor="#222222"
                android:layout_marginBottom="8dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvGifts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:overScrollMode="never"
                android:clipToPadding="false"
                android:paddingBottom="8dp"/>
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation Bar -->
    <include
        layout="@layout/layout_bottom_navigation"
        android:id="@+id/bottom_navigation_container"
        android:layout_width="match_parent"
        android:layout_height="56dp" />

</LinearLayout>