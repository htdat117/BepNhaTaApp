<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/primary1">

    <!-- Header -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/primary1"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:contentDescription="Back"
            android:src="@drawable/ic_circle_left_back" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Đổi mật khẩu"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:fontFamily="@font/inter_regular">

            <!-- Mật khẩu hiện tại -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mật khẩu hiện tại"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="4dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/bg_edittext_outline_orange_pmr4"
                android:layout_marginBottom="12dp"
                android:paddingEnd="8dp"
                android:paddingStart="8dp">

                <EditText
                    android:id="@+id/edt_current_password"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:hint="Nhập mật khẩu hiện tại"
                    android:textSize="16sp"
                    android:fontFamily="@font/inter_regular"
                    android:paddingStart="10dp"
                    android:paddingEnd="40dp"
                    android:inputType="textPassword"/>

                <ImageButton
                    android:id="@+id/btn_toggle_current"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_eye"
                    android:background="@android:color/transparent"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>

            <!-- Mật khẩu mới -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mật khẩu mới"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="4dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/bg_edittext_outline_orange_pmr4"
                android:layout_marginBottom="12dp"
                android:paddingEnd="8dp"
                android:paddingStart="8dp">

                <EditText
                    android:id="@+id/edt_new_password"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:hint="Nhập mật khẩu mới"
                    android:textSize="16sp"
                    android:fontFamily="@font/inter_regular"
                    android:paddingStart="10dp"
                    android:paddingEnd="40dp"
                    android:inputType="textPassword"/>

                <ImageButton
                    android:id="@+id/btn_toggle_new"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_eye"
                    android:background="@android:color/transparent"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>

            <!-- Nhập lại mật khẩu mới -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nhập lại mật khẩu mới"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="4dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/bg_edittext_outline_orange_pmr4"
                android:layout_marginBottom="24dp"
                android:paddingEnd="8dp"
                android:paddingStart="8dp">

                <EditText
                    android:id="@+id/edt_confirm_password"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:hint="Nhập lại mật khẩu mới"
                    android:textSize="16sp"
                    android:fontFamily="@font/inter_regular"
                    android:paddingStart="10dp"
                    android:paddingEnd="40dp"
                    android:inputType="textPassword"/>

                <ImageButton
                    android:id="@+id/btn_toggle_confirm"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_eye"
                    android:background="@android:color/transparent"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>

            <!-- Nút đổi mật khẩu -->
            <Button
                android:id="@+id/btn_change_password"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Đổi mật khẩu"
                android:textSize="20sp"
                android:textStyle="bold"
                android:backgroundTint="@color/orange"
                android:textColor="@android:color/white"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"/>
        </LinearLayout>
    </ScrollView>

    <!-- Bottom navigation -->
    <include
        layout="@layout/layout_bottom_navigation"
        android:id="@+id/bottom_navigation_container"/>
</LinearLayout>