<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true">

    <!-- Placeholder for Custom Header View -->
    <include layout="@layout/layout_custom_header_no_search"
        android:id="@+id/custom_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <include layout="@layout/layout_back_header"
        android:id="@+id/back_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <!-- Product image -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="16dp">

                <ImageView
                    android:id="@+id/ivProduct"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:background="@drawable/bg_rounded_16"
                    android:clipToOutline="true"
                    android:src="@drawable/sample_img" />

                <ImageView
                    android:id="@+id/ivFavorite"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_margin="12dp"
                    android:src="@drawable/ic_favorite_unchecked"
                    android:scaleType="center"
                    android:layout_gravity="end|top" />
            </FrameLayout>

            <!-- Product name and time -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="12dp">

                <TextView
                    android:id="@+id/tvProductName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Tên sản phẩm"
                    android:textColor="@color/dark1"
                    android:textSize="@dimen/header2"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_time"
                    android:layout_marginEnd="4dp"/>

                <TextView
                    android:id="@+id/tvTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="60 phút"
                    style="@style/Body.Medium.Ag2"
                    android:textColor="@color/primary1"/>
            </LinearLayout>

            <!-- Description title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Mô tả món ăn"
                android:textColor="@color/dark1"
                style="@style/Body.Bold.Ag1"
                android:textStyle="bold"/>

            <!-- Description -->
            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="wrap_content"
                android:textColor="@color/dark1"
                style="@style/Body.Regular.Ag2"
                android:layout_height="wrap_content"
                android:text="Mô tả chi tiết về món ăn..."
                android:layout_marginTop="4dp"/>
<!--            Hướng dẫn cách nấu-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/dark1"
                    android:text="Hướng dẫn cách nấu"
                    style="@style/Body.Bold.Ag1"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvViewRecipe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Xem công thức"
                    android:fontFamily="@font/inter_medium"
                    android:textColor="@color/primary1"/>
                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_arrow_right"
                    android:layout_marginStart="4dp"/>
            </LinearLayout>
<!--            Thành phần dinh dưỡng -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/dark1"
                android:text="Thành phần dinh dưỡng"
                style="@style/Body.Bold.Ag1"
                android:textStyle="bold"
                android:layout_marginTop="12dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="12dp"
                android:gravity="center_vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_carb"
                            android:background="@drawable/rounded_bg_primary4_for_product_recipes"
                            android:padding="8dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="142g carbs"
                            android:id="@+id/tvCarbs"
                            android:textColor="@color/dark1"
                            android:textSize="@dimen/body2"
                            android:gravity="center_vertical"
                            android:layout_marginStart="8dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_protein"
                            android:background="@drawable/rounded_bg_primary4_for_product_recipes"
                            android:padding="8dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="70g proteins"
                            android:id="@+id/tvProtein"
                            android:textColor="@color/dark1"
                            android:textSize="@dimen/body2"
                            android:gravity="center_vertical"
                            android:layout_marginStart="8dp"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_calo"
                            android:background="@drawable/rounded_bg_primary4_for_product_recipes"
                            android:padding="8dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:id="@+id/tvCalo"
                            android:textColor="@color/dark1"
                            android:text="142g carbs"
                            android:textSize="@dimen/body2"
                            android:gravity="center_vertical"
                            android:layout_marginStart="8dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_fat"
                            android:background="@drawable/rounded_bg_primary4_for_product_recipes"
                            android:padding="8dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:id="@+id/tvFat"
                            android:text="68g fat"
                            android:textColor="@color/dark1"
                            android:textSize="@dimen/body2"
                            android:gravity="center_vertical"
                            android:layout_marginStart="8dp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


            <!-- Tab layout -->
            <com.google.android.material.button.MaterialButtonToggleGroup
                android:id="@+id/toggleGroupTab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:singleSelection="true"
                app:selectionRequired="true"
                app:checkedButton="@id/btnTabIngredient">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnTabIngredient"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="48dp"
                    android:text="Gói nguyên liệu"
                    android:textSize="14sp"
                    app:cornerRadius="24dp"
                    app:iconGravity="textStart"
                    app:checkedIcon="@null"
                    android:backgroundTint="@color/segmented_bg"
                    android:textColor="@color/segmented_text"
                    android:textAllCaps="false"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnTabGuide"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="48dp"
                    android:text="Hướng dẫn sử dụng"
                    android:textSize="14sp"
                    app:cornerRadius="24dp"
                    app:iconGravity="textStart"
                    app:checkedIcon="@null"
                    android:backgroundTint="@color/segmented_bg"
                    android:textColor="@color/segmented_text"
                    android:textAllCaps="false"/>

            </com.google.android.material.button.MaterialButtonToggleGroup>

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <!-- Reviews header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvReviewHeader"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="@dimen/body1"
                    android:fontFamily="@font/inter_bold"
                    android:textColor="@color/dark1"
                    android:text="Đánh giá sản phẩm (2.804)"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvAllReviews"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Body.Regular.Ag3"
                    android:text="Tất cả"
                    android:textColor="@color/dark2"/>

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@drawable/ic_right_arrow_gray"
                    android:layout_marginStart="4dp"/>
            </LinearLayout>

            <!-- Reviews list -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvReviews"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:layout_marginTop="8dp"/>

            <!-- Suggestions header -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Có thể bạn sẽ thích"
                android:textColor="@color/dark1"
                android:textSize="@dimen/body1"
                android:fontFamily="@font/inter_bold"
                android:textStyle="bold"/>

            <!-- Suggestions list -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvSuggestions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:layout_marginTop="8dp"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Bottom bar area -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary4"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- First row: serving, quantity, price -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Serving toggle -->
            <com.google.android.material.button.MaterialButtonToggleGroup
                android:id="@+id/toggleGroupServing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:singleSelection="true"
                app:selectionRequired="true"
                app:checkedButton="@id/btnServing2">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnServing2"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="2 người"
                    android:textSize="14sp"
                    app:cornerRadius="16dp"
                    app:iconGravity="textStart"
                    app:checkedIcon="@null"
                    app:backgroundTint="@color/segmented_bg"
                    android:textColor="@color/segmented_text"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnServing4"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="4 người"
                    android:textSize="14sp"
                    app:cornerRadius="16dp"
                    app:iconGravity="textStart"
                    app:checkedIcon="@null"
                    app:backgroundTint="@color/segmented_bg"
                    android:textColor="@color/segmented_text"/>

            </com.google.android.material.button.MaterialButtonToggleGroup>

            <!-- Quantity control -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="16dp"
                android:background="@drawable/bg_quantity_box"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/btnMinus"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_minus_product"/>

                <TextView
                    android:id="@+id/tvQuantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:layout_marginHorizontal="8dp"/>

                <ImageView
                    android:id="@+id/btnPlus"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_add_product"/>
            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <!-- Price column -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="end">

                <TextView
                    android:id="@+id/tvOldPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100000"
                    android:textColor="@color/dark2"
                    style="@style/Body.Medium.Ag2"/>

                <TextView
                    android:id="@+id/tvPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="90000"
                    android:textColor="@color/primary1"
                    android:textStyle="bold"
                    android:textSize="@dimen/header3"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Second row: buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <ImageView
                android:id="@+id/btnAddToCart"
                android:layout_width="80dp"
                android:layout_height="56dp"
                android:src="@drawable/ic_addtocart"
                android:background="@drawable/button_orange_rounded"
                android:padding="12dp"/>

            <Button
                android:id="@+id/btnBuyNow"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="Mua ngay"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:background="@drawable/button_orange_rounded"
                android:layout_marginStart="12dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout> 