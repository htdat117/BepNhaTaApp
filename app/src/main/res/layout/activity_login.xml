<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/primary4"
    tools:context=".features.login.LoginActivity">

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp">

            <!-- Close Icon - Moved inside ScrollView for scrolling -->
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_close"
                android:layout_marginTop="32dp"
                android:contentDescription="Close button"/>

            <!-- Logo and Title -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_marginTop="20dp">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/ic_logo"
                    android:contentDescription="App Logo"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đăng nhập"
                    android:textSize="@dimen/header1"
                    android:fontFamily="@font/inter_bold"
                    android:textColor="@color/primary1"
                    android:layout_marginTop="32dp"/>

            </LinearLayout>

            <!-- Phone Number Label and Link -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="24dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Số điện thoại"
                    android:fontFamily="@font/inter_bold"
                    android:textSize="@dimen/body1"
                    android:textColor="@color/dark2" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chưa có tài khoản ?"
                    android:textColor="@color/primary1"
                    android:fontFamily="@font/inter_regular"
                    android:textSize="@dimen/body3"
                    android:layout_gravity="center_vertical"/>

            </LinearLayout>

            <!-- Phone Number Input and Clear Icon -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/edit_text_background"
                android:paddingEnd="12dp"
                android:paddingStart="12dp"
                android:paddingVertical="15dp">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Vui lòng nhập"
                    android:fontFamily="@font/inter_medium"
                    android:textSize="@dimen/body2"
                    android:inputType="phone"
                    android:background="@null"
                    android:padding="0dp"
                    android:layout_centerVertical="true"/>

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ic_closeorange"
                    android:contentDescription="Clear text button"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>

            <!-- Buttons -->
            <Button
                android:id="@+id/button_continue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tiếp tục"
                android:fontFamily="@font/inter_bold"
                android:textSize="@dimen/header4"
                android:textColor="@color/white"
                android:background="@drawable/button_bordered_orange"
                android:paddingVertical="10dp"
                android:layout_marginTop="32dp" />
            <Button
                android:id="@+id/buy_nologin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mua hàng không cần tài khoản"
                android:fontFamily="@font/inter_bold"
                android:textSize="@dimen/header4"
                android:textColor="@color/primary1"
                android:background="@drawable/bordered_button_background"
                android:paddingVertical="10dp"
                android:layout_marginTop="16dp"/>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="48dp">

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="@android:color/darker_gray"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="hoặc Đăng nhập bằng"
                    android:textColor="@android:color/black"
                    android:layout_marginHorizontal="16dp"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="@android:color/darker_gray"/>

            </LinearLayout>

            <!-- Social Login Icons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="32dp">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/ic_google"
                    android:contentDescription="Google Login"/>

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/ic_facebook"
                    android:contentDescription="Facebook Login"
                    android:layout_marginStart="16dp"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>