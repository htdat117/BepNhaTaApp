<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- Header row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="8dp">

        <!-- Dot indicator -->
        <View
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/circle_orange" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvMealTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Body.Bold.Ag3"
                android:text="Buổi sáng" />

            <TextView
                android:id="@+id/tvMealCalories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Body.Regular.Ag4"
                android:text="826 Calories" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/btnMealOptions"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_3dot"
            android:background="@android:color/transparent"
            android:contentDescription="More" />
    </LinearLayout>

    <!-- Container for recipes -->
    <LinearLayout
        android:id="@+id/containerRecipes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="24dp" />
</LinearLayout> 