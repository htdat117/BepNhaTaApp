<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/bg_voucher_detail_border"
    android:padding="16dp"
    android:layout_margin="12dp">

    <ImageView
        android:id="@+id/imgVoucher"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ticket"
        android:contentDescription="Voucher"
        android:layout_gravity="center_vertical" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="12dp">

        <TextView
            android:id="@+id/tvVoucherTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GIAM20%"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#222222" />

        <TextView
            android:id="@+id/tvVoucherDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GIẢM 20% ĐƠN HÀNG CHÀO MỪNG THÁNG 4, GIẢM TỐI ĐA 60K"
            android:textSize="14sp"
            android:textColor="#222222"
            android:layout_marginTop="2dp"
            android:maxLines="2" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_point"
        android:layout_marginTop="6dp"
        />
        <TextView
            android:id="@+id/tvVoucherPoint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Điểm: 500"
            android:textColor="#F36B22"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_marginTop="6dp"/>

</LinearLayout>
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnExchange"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:text="Đổi điểm"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:backgroundTint="#F36B22"
        android:background="@drawable/bg_button_rounded_orange"
        android:textSize="15sp"
        android:layout_gravity="center_vertical"/>
</LinearLayout>