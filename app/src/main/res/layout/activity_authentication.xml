<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@color/primary4"
        tools:context=".features.login.AuthenticationActivity">

        <!-- Close button -->
        <ImageView
            android:id="@+id/closeButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_close"
            android:contentDescription="Close"/>

        <!-- Logo -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginTop="24dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_logo"
                android:contentDescription="App Logo"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Xác thực"
                style="@style/Header.Ag1"
                android:textColor="@color/primary1"
                android:layout_marginTop="24dp"/>

        </LinearLayout>

        <!-- Description -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mã xác thực được gửi đến 0349991234\nVui lòng nhập mã xác thực vào ô bên dưới"
            android:textSize="16sp"
            android:textColor="@color/dark1"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp" />

        <!-- OTP Input Boxes -->
        <LinearLayout
            android:id="@+id/otpContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <EditText
                android:id="@+id/editTextOtp1"
                style="@style/OtpInputBox"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"/>
            <EditText
                android:id="@+id/editTextOtp2"
                style="@style/OtpInputBox"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"/>
            <EditText
                android:id="@+id/editTextOtp3"
                style="@style/OtpInputBox"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"/>
            <EditText
                android:id="@+id/editTextOtp4"
                style="@style/OtpInputBox"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"/>
            <EditText
                android:id="@+id/editTextOtp5"
                style="@style/OtpInputBox"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"/>
            <EditText
                android:id="@+id/editTextOtp6"
                style="@style/OtpInputBox"
                android:layout_width="0dp"
                android:layout_weight="1"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tvCountdown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:50"
            android:textSize="18sp"
            android:textColor="@color/dark2"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp" />

        <!-- Resend OTP and Forgot Password Links -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginBottom="32dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Không nhận được mã?"
                android:textSize="16sp"
                android:textColor="@color/dark2"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/tvResend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gửi lại mã"
                android:textSize="16sp"
                android:textColor="@color/primary1"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Confirm button -->
        <Button
            android:id="@+id/confirmButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Xác nhận"
            style="@style/PrimaryButton"
            android:layout_marginBottom="32dp" />

        <!-- Support message -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nếu bạn không nhận được OTP vui lòng gọi đến tổng đài\n19001234 để được hỗ trợ.\nBếp Nhà Ta xin cảm ơn."
            android:textSize="14sp"
            android:textColor="@color/dark2"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>
</ScrollView> 