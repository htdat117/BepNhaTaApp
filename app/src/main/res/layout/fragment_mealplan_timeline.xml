<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="16dp">

    <!-- KPI Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_piechart"
                android:contentDescription="Chart" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="8dp">

                <TextView
                    android:id="@+id/tvCalories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Body.Bold.Ag3"
                    android:text="2281 Calories" />

                <TextView
                    android:id="@+id/tvMacros"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Body.Regular.Ag4"
                    android:text="229g Carbs, 95g Fat, 143g Protein" />
            </LinearLayout>

            <ImageButton
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_arrow_right"
                android:background="@android:color/transparent"
                android:contentDescription="Details" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Tracking label -->
    <TextView
        android:id="@+id/tvMealCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Theo dõi 0/4 bữa ăn"
        style="@style/Body.Medium.Ag3"
        android:gravity="center"
        android:layout_marginBottom="8dp" />

    <!-- Day note Text -->
    <TextView
        android:id="@+id/tvDayNote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/dark2"
        style="@style/Body.Regular.Ag3"
        android:visibility="gone"
        android:layout_marginBottom="8dp" />

    <!-- Timeline RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvTimeline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:nestedScrollingEnabled="false" />

</LinearLayout> 