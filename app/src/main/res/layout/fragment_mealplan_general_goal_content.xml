<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnLoseWeight"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginTop="8dp"
        style="@style/Body.Medium.Ag1"
        android:backgroundTint="@android:color/white"
        app:strokeWidth="1dp"
        app:strokeColor="@color/primary1"
        app:rippleColor="@android:color/transparent"
        android:text="Giảm cân"
        android:textColor="@color/primary1"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnMaintainWeight"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginTop="16dp"
        style="@style/Body.Medium.Ag1"
        android:backgroundTint="@android:color/white"
        app:strokeWidth="1dp"
        app:strokeColor="@color/primary1"
        app:rippleColor="@android:color/transparent"
        android:text="Duy trì cân nặng"
        android:textColor="@color/primary1"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnGainMuscle"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginTop="16dp"
        style="@style/Body.Medium.Ag1"
        android:backgroundTint="@android:color/white"
        app:strokeWidth="1dp"
        app:strokeColor="@color/primary1"
        app:rippleColor="@android:color/transparent"
        android:text="Tăng cơ"
        android:textColor="@color/primary1"/>

</LinearLayout> 