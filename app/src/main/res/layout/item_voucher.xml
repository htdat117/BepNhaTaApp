<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="4dp"
    card_view:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <!-- Icon voucher -->
        <ImageView
            android:id="@+id/imgVoucher"
            android:layout_width="57dp"
            android:layout_height="67dp"
            android:src="@drawable/ticket"
            android:layout_gravity="center_vertical"
            android:contentDescription="Voucher" />

        <!-- Thông tin voucher -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:id="@+id/tvVoucherTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GIAM20%"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#222222" />

            <TextView
                android:id="@+id/tvVoucherDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GIẢM 20% ĐƠN HÀNG CHÀO MỪNG THÁNG 4, GIẢM TỐI ĐA 60K"
                android:textSize="14sp"
                android:textColor="#222222"
                android:layout_marginTop="2dp"
                android:maxLines="2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="6dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvVoucherDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HSD: 30/04/2024"
                    android:textColor="#F36B22"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tvVoucherCondition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Điều kiện"
                    android:textColor="#BFBFBF"
                    android:textSize="13sp"
                    android:layout_marginEnd="4dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>