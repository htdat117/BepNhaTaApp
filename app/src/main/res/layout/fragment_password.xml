<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- Password Label and Links -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mật khẩu"
            style="@style/Body.Bold.Ag1"
            android:textColor="@color/dark2" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tvRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chưa có tài khoản ?"
            style="@style/Body.Regular.Ag2"
            android:textColor="@color/primary1"
            android:layout_gravity="center_vertical" />

    </LinearLayout>

    <!-- Password Input and Clear Icon -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_background"
        android:padding="12dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/editTextPassword"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:fontFamily="@font/inter_medium"
            android:hint="Vui lòng nhập"
            android:inputType="textPassword"
            android:paddingEnd="8dp"
            android:layout_centerVertical="true" />

        <ImageView
            android:id="@+id/clearPasswordButton"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:contentDescription="Clear text button"
            android:src="@drawable/ic_closeorange"
            android:visibility="visible"
            android:layout_marginStart="8dp" />

        <!-- Eye icon to toggle password visibility -->
        <ImageView
            android:id="@+id/togglePasswordVisibilityButton"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:contentDescription="Toggle password visibility"
            android:src="@drawable/ic_eye"
            android:visibility="visible"
            android:layout_marginStart="8dp" />

    </LinearLayout>

    <!-- Forgot Password and Login by OTP -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/forgotPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quên mật khẩu?"
            style="@style/Body.Regular.Ag2"
            android:textColor="@color/primary1"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/loginByOtp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đăng nhập bằng OTP"
            style="@style/Body.Regular.Ag2"
            android:textColor="@color/primary1"/>

    </LinearLayout>

    <Button
        android:id="@+id/button_login"
        style="@style/PrimaryButton"
        android:text="Tiếp tục"
        android:layout_marginTop="16dp"/>

</LinearLayout> 