<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/primary4"
    tools:context=".features.login.NewPasswordActivity">

    <!-- Close button -->
    <ImageView
        android:id="@+id/closeButton"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_close"
        android:contentDescription="Close" />

    <!-- Scrollable content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/closeButton"
        android:layout_marginTop="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Logo -->
            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/ic_logo"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="32dp"
                android:contentDescription="Logo" />

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mật khẩu mới"
                android:textSize="32sp"
                android:textColor="@color/primary1"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="16dp" />

            <!-- New Password Input -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mật khẩu mới"
                style="@style/Body.Bold.Ag1"
                android:textColor="@color/dark2"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_background"
                android:padding="12dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/editTextNewPassword"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:fontFamily="@font/inter_medium"
                    android:hint="Vui lòng nhập"
                    android:inputType="textPassword"
                    android:paddingEnd="8dp"
                    android:layout_centerVertical="true" />

                <ImageView
                    android:id="@+id/btnClearNewPass"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:contentDescription="Clear text button"
                    android:src="@drawable/ic_closeorange"
                    android:visibility="visible"
                    android:layout_marginStart="8dp" />

                <ImageView
                    android:id="@+id/btnToggleNewPass"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:contentDescription="Toggle password visibility"
                    android:src="@drawable/ic_eye"
                    android:visibility="visible"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvNewPassError"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FF0000"
                android:textSize="12sp"
                android:visibility="gone" />

            <!-- Confirm New Password Input -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Xác nhận mật khẩu"
                style="@style/Body.Bold.Ag1"
                android:textColor="@color/dark2"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_background"
                android:padding="12dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/editTextConfirmPassword"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:fontFamily="@font/inter_medium"
                    android:hint="Vui lòng nhập"
                    android:inputType="textPassword"
                    android:paddingEnd="8dp"
                    android:layout_centerVertical="true" />

                <ImageView
                    android:id="@+id/btnClearConfirmPass"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:contentDescription="Clear text button"
                    android:src="@drawable/ic_closeorange"
                    android:visibility="visible"
                    android:layout_marginStart="8dp" />

                <ImageView
                    android:id="@+id/btnToggleConfirmPass"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:contentDescription="Toggle password visibility"
                    android:src="@drawable/ic_eye"
                    android:visibility="visible"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvConfirmPassError"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FF0000"
                android:textSize="12sp"
                android:visibility="gone" />

            <!-- Complete Button -->
            <Button
                android:id="@+id/button_complete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hoàn thành"
                style="@style/PrimaryButton"
                android:layout_marginTop="32dp" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout> 