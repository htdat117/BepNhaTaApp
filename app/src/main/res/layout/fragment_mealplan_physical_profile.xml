<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="16dp"
        android:paddingBottom="8dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_back"
            app:tint="@color/primary1"
            android:contentDescription="Back" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Hồ sơ vật lý"
            android:textColor="@color/dark1"
            style="@style/Header.Ag3"
            android:gravity="center" />

        <TextView
            android:id="@+id/btnNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tiếp theo"
            android:textColor="@color/primary1"
            style="@style/Body.Bold.Ag4"
            android:gravity="center_vertical" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/orange" />

    <!-- Scrollable content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Description -->
            <TextView
                android:id="@+id/tvDesc"
                style="@style/Body.Regular.Ag3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bếp Nhà Ta sử dụng RMR (Tỷ lệ trao đổi chất nghỉ ngơi) để ước tính ngân sách dinh dưỡng của bạn, dựa trên chiều cao, cân nặng, giới tính sinh học và tuổi."
                android:layout_marginBottom="24dp"
                android:layout_marginTop="24dp" />

            <!-- Height -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">
                <TextView
                    style="@style/Body.Regular.Ag3"
                    android:text="Chiều cao"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
                <EditText
                    android:id="@+id/etHeight"
                    style="@style/Body.Regular.Ag3"
                    android:layout_width="64dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:background="@android:color/transparent"
                    android:gravity="end"
                    android:padding="0dp"
                    android:text="173" />
                <View
                    android:layout_width="0.5dp"
                    android:layout_height="32dp"
                    android:background="#FF5722"
                    android:layout_marginHorizontal="8dp" />
                <TextView
                    style="@style/Body.Regular.Ag3"
                    android:text="cm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <!-- Weight -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">
                <TextView
                    style="@style/Body.Regular.Ag3"
                    android:text="Cân nặng"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
                <EditText
                    android:id="@+id/etWeight"
                    style="@style/Body.Regular.Ag3"
                    android:layout_width="64dp"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:background="@android:color/transparent"
                    android:gravity="end"
                    android:padding="0dp"
                    android:text="70" />
                <View
                    android:layout_width="0.5dp"
                    android:layout_height="32dp"
                    android:background="#FF5722"
                    android:layout_marginHorizontal="8dp" />
                <TextView
                    style="@style/Body.Regular.Ag3"
                    android:text="kg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <!-- Gender -->
            <TextView
                style="@style/Body.Regular.Ag3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Giới tính"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp" />
            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroupGender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checkedButton="@+id/chipMale"
                app:singleLine="false"
                app:singleSelection="true"
                app:chipSpacing="4dp">
                <com.google.android.material.chip.Chip
                    android:id="@+id/chipMale"
                    style="@style/Widget.BepNhaTa.ChoiceChip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nam"
                    app:chipBackgroundColor="@color/selector_chip_bg"
                    android:textColor="@color/selector_chip_text"
                    app:chipStrokeColor="@color/orange"
                    app:chipStrokeWidth="2dp"
                    app:checkedIconVisible="false"
                    app:checkedIcon="@null"
                    android:checkable="true"/>
                <com.google.android.material.chip.Chip
                    android:id="@+id/chipFemale"
                    style="@style/Widget.BepNhaTa.ChoiceChip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nữ"
                    app:chipBackgroundColor="@color/selector_chip_bg"
                    android:textColor="@color/selector_chip_text"
                    app:chipStrokeColor="@color/orange"
                    app:chipStrokeWidth="2dp"
                    app:checkedIconVisible="false"
                    app:checkedIcon="@null"
                    android:checkable="true"/>
                <com.google.android.material.chip.Chip
                    android:id="@+id/chipOther"
                    style="@style/Widget.BepNhaTa.ChoiceChip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Khác"
                    app:chipBackgroundColor="@color/selector_chip_bg"
                    android:textColor="@color/selector_chip_text"
                    app:chipStrokeColor="@color/orange"
                    app:chipStrokeWidth="2dp"
                    app:checkedIconVisible="false"
                    app:checkedIcon="@null"
                    android:checkable="true"/>
            </com.google.android.material.chip.ChipGroup>

            <!-- Age -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="12dp">
                <TextView
                    style="@style/Body.Regular.Ag3"
                    android:text="Tuổi"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
                <EditText
                    android:id="@+id/etAge"
                    style="@style/Body.Regular.Ag3"
                    android:layout_width="64dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:background="@android:color/transparent"
                    android:gravity="end"
                    android:padding="0dp"
                    android:text="22" />
                <View
                    android:layout_width="0.5dp"
                    android:layout_height="32dp"
                    android:background="#FF5722"
                    android:layout_marginHorizontal="8dp" />
                <TextView
                    style="@style/Body.Regular.Ag3"
                    android:text="tuổi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <!-- Body status -->
            <TextView
                style="@style/Body.Regular.Ag3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tình trạng cơ thể"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp" />
            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroupBody"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checkedButton="@+id/chipFat"
                app:singleLine="false"
                app:singleSelection="true"
                app:chipSpacing="4dp">
                <com.google.android.material.chip.Chip
                    android:id="@+id/chipFat"
                    style="@style/Widget.BepNhaTa.ChoiceChip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Béo"
                    app:chipBackgroundColor="@color/selector_chip_bg"
                    android:textColor="@color/selector_chip_text"
                    app:chipStrokeColor="@color/orange"
                    app:chipStrokeWidth="2dp"
                    app:checkedIconVisible="false"
                    app:checkedIcon="@null"
                    android:checkable="true"/>
                <com.google.android.material.chip.Chip
                    android:id="@+id/chipThin"
                    style="@style/Widget.BepNhaTa.ChoiceChip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ốm"
                    app:chipBackgroundColor="@color/selector_chip_bg"
                    android:textColor="@color/selector_chip_text"
                    app:chipStrokeColor="@color/orange"
                    app:chipStrokeWidth="2dp"
                    app:checkedIconVisible="false"
                    app:checkedIcon="@null"
                    android:checkable="true"/>
                <com.google.android.material.chip.Chip
                    android:id="@+id/chipNormal"
                    style="@style/Widget.BepNhaTa.ChoiceChip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Trung bình"
                    app:chipBackgroundColor="@color/selector_chip_bg"
                    android:textColor="@color/selector_chip_text"
                    app:chipStrokeColor="@color/orange"
                    app:chipStrokeWidth="2dp"
                    app:checkedIconVisible="false"
                    app:checkedIcon="@null"
                    android:checkable="true"/>
            </com.google.android.material.chip.ChipGroup>

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Next Button -->
    <Button
        android:id="@+id/btnNext1"
        style="@style/PrimaryButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tiếp theo"
        android:layout_margin="24dp" />

</LinearLayout> 