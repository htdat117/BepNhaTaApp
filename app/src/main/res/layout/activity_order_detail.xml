<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvExpectedTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thời gian nhận hàng dự kiến: 17 - 18h, 27 Th 5 2025"
            android:textColor="@color/orange"
            android:textSize="15sp"
            android:background="@drawable/bg_card_round"
            android:padding="8dp"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:id="@+id/tvAddressLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Địa chỉ nhận hàng"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_marginBottom="4dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/bg_card_round"
            android:padding="10dp"
            android:layout_marginBottom="12dp">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvReceiverName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đoàn Kiên"
                    android:textStyle="bold"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/tvReceiverPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="033 523 6269"
                    android:textSize="14sp"/>
                <TextView
                    android:id="@+id/tvReceiverAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="312 Quang Trung, Phường 10, Gò Vấp"
                    android:textSize="14sp"/>
            </LinearLayout>
        </LinearLayout>

        <include layout="@layout/item_order_list" />

        <TextView
            android:id="@+id/tvOrderSummaryLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tổng kết đơn hàng"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="4dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_card_round"
            android:padding="10dp">
            <TextView
                android:id="@+id/tvOrderTotal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tổng tiền hàng: 90.000đ"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/tvShippingFee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phí vận chuyển: 45.000đ"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/tvShippingDiscount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ưu đãi phí vận chuyển: -45.000đ"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/tvFinalTotal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thành tiền: 90.000đ"
                android:textStyle="bold"
                android:textColor="@color/orange"
                android:textSize="15sp"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tvOrderInfoLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mã đơn hàng: GNLBK2N_1"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="4dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_card_round"
            android:padding="10dp">
            <TextView
                android:id="@+id/tvPaymentMethod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phương thức thanh toán: COD"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/tvOrderTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thời gian đặt hàng: 10:00 27-05-2025"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/tvConfirmTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thời gian xác nhận đơn hàng"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/tvPickupTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thời gian lấy hàng"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/tvReceiveTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thời gian nhận hàng"
                android:textSize="14sp"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>