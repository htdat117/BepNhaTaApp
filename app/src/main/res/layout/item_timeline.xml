<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingVertical="8dp">

    <!-- simple dot placeholder -->
    <View
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/circle_orange" />

    <ImageView
        android:id="@+id/imgMeal"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:scaleType="centerCrop"
        android:src="@drawable/placeholder_banner_background" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="8dp">

        <TextView
            android:id="@+id/tvMealTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Body.Medium.Ag3"
            android:text="Buổi sáng - 826 Calories" />

        <TextView
            android:id="@+id/tvMealName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Body.Regular.Ag3"
            android:text="Sườn nướng mật ong" />
    </LinearLayout>
</LinearLayout> 