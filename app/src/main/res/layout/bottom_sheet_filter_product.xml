<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_bottom_sheet_rounded">

    <!-- Handle a small top radius if desired -->

    <!-- (Header removed for bottom sheet) -->

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Nguyên liệu -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Nguyên liệu"
                    android:textColor="@color/dark1"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginTop="8dp"
                    android:gravity="center_vertical"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/btnClose"
                    android:layout_width="12dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_close_popup"
                    android:layout_gravity="end" />
            </LinearLayout>

            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/flexIngredients"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:flexWrap="wrap"
                app:justifyContent="flex_start"
                android:layout_marginTop="8dp" />

            <!-- Địa phương -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Địa phương"
                android:textColor="@color/dark1"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginTop="16dp" />

            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/flexRegions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:flexWrap="wrap"
                app:justifyContent="flex_start"
                android:layout_marginTop="8dp" />

            <!-- Nhóm dinh dưỡng -->
            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/dark1"
                android:layout_height="wrap_content"
                android:text="Nhóm dinh dưỡng"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginTop="16dp" />

            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/flexNutritions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:flexWrap="wrap"
                app:justifyContent="flex_start"
                android:layout_marginTop="8dp" />

            <!-- Lượng calo -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lượng calo"
                android:textStyle="bold"
                android:textColor="@color/dark1"
                android:textSize="18sp"
                android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/tvKcalValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="200"
                android:background="@drawable/rounded_bg_primary4"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:layout_marginTop="8dp" />

            <com.google.android.material.slider.Slider
                android:id="@+id/sliderKcal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:valueFrom="0"
                android:valueTo="1000"
                android:stepSize="10"
                app:labelBehavior="floating" />

            <!-- Thời gian nấu -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thời gian nấu"
                android:textColor="@color/dark1"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/tvTimeValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:background="@drawable/rounded_bg_primary4"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:layout_marginTop="8dp" />

            <com.google.android.material.slider.Slider
                android:id="@+id/sliderTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:valueFrom="0"
                android:valueTo="120"
                android:stepSize="5"
                app:labelBehavior="floating" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="16dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnClear"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="48dp"
            android:text="Xóa bộ lọc"
            android:textColor="@color/primary1"
            android:background="@drawable/rounded_bg_primary4"
            app:backgroundTint="@color/white"
            android:insetTop="0dp"
            android:insetBottom="0dp" />

        <View
            android:layout_width="8dp"
            android:layout_height="0dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnApply"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="48dp"
            android:text="Hoàn tất"
            android:textColor="@android:color/white"
            android:background="@drawable/button_orange_rounded"
            app:backgroundTint="@null"
            android:enabled="true"
            android:insetTop="0dp"
            android:insetBottom="0dp" />
    </LinearLayout>

</LinearLayout> 