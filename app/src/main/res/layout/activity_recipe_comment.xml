<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context=".features.recipes.RecipeComment">

    <include layout="@layout/layout_custom_header_no_search"
        android:id="@+id/custom_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bình luận"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:background="@color/primary1"
        android:paddingBottom="8dp"/>

    <!-- Tiêu đề Bình luận + back -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bình luận"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center" />
        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_back_left"
            android:contentDescription="Back"
            android:layout_gravity="start|center_vertical" />
    </FrameLayout>

    <!-- Thanh nhập bình luận -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imvAvatarCmt"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/profile_placeholder" />
        <EditText
            android:id="@+id/edtComment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Chia sẻ cảm nhận của bạn"
            android:layout_marginStart="12dp"
            android:background="@drawable/bg_comment_input"
            android:padding="10dp"/>
    </LinearLayout>

    <!-- Dropdown sắp xếp -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sắp xếp theo: "
            android:textColor="#888"
            android:textSize="14sp"/>
        <TextView
            android:id="@+id/tvSort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hữu ích nhất"
            android:textColor="#EA5C2B"
            android:textStyle="bold"
            android:textSize="14sp"
            android:paddingStart="4dp"/>
        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_arrow_down"

            android:layout_marginStart="2dp"/>
    </LinearLayout>

    <!-- Danh sách bình luận -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcComment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingHorizontal="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"/>

    <!-- Phân trang mới -->
    <LinearLayout
        android:id="@+id/layoutPagination"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="8dp">
        <ImageView
            android:id="@+id/btnPrevPage"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_arrow_left"
            android:background="@drawable/bg_page_selector"
            android:padding="6dp"/>
        <!-- Các số trang sẽ được add động từ code -->
        <!-- Ví dụ: -->
        <TextView
            android:id="@+id/tvPage1"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:gravity="center"
            android:text="1"
            android:textSize="16sp"
            android:textColor="#F36B22"
            android:background="@drawable/bg_page_selector"
            android:layout_marginHorizontal="2dp"/>
        <TextView
            android:id="@+id/tvPage2"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:gravity="center"
            android:text="2"
            android:textSize="16sp"
            android:textColor="#F36B22"
            android:background="@drawable/bg_page_selector"
            android:layout_marginHorizontal="2dp"/>
        <!-- ... Thêm các số trang khác động từ code ... -->
        <ImageView
            android:id="@+id/btnNextPage"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_arrow_right"
            android:background="@drawable/bg_page_selector"
            android:padding="6dp"/>
    </LinearLayout>

    <include layout="@layout/layout_bottom_navigation"
        android:id="@+id/bottom_navigation_container"/>

</LinearLayout>