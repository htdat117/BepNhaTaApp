<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context=".features.recipes.RecipeComment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary1"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/imvAvatar"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/img_dat"
                android:scaleType="centerCrop"
                android:background="@drawable/bg_avatar"
                android:cropToPadding="true"
                android:clipToOutline="true" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hồ Tiến Đạt"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:textSize="@dimen/header3" />

            </LinearLayout>

            <ImageView
                android:id="@+id/imvCart"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_cart_header"
                android:layout_marginEnd="16dp" />

            <ImageView
                android:id="@+id/imvMessage"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_message"
                android:layout_marginEnd="16dp" />

            <ImageView
                android:id="@+id/imvNotification"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_notification" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/primary1"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Quản lý đơn hàng"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/header3"
                    android:textStyle="bold"
                    android:gravity="center" />

                <ImageButton
                    android:id="@+id/btn_back"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_back_left"
                    android:contentDescription="Back"
                    android:layout_gravity="start|center_vertical" />
            </FrameLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Công thức > Tất cả > Bánh canh cua > Bình luận"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="@dimen/body3" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingHorizontal="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingVertical="16dp"
            >

            <ImageView
                android:id="@+id/imvAvatarCmt"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/img_dat"
                android:scaleType="centerCrop"
                android:background="@drawable/bg_avatar"
                android:cropToPadding="true"
                android:clipToOutline="true" />

            <EditText
                android:id="@+id/edtComment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Chia sẻ cảm nhận của bạn"
                android:layout_marginStart="16dp"
                android:background="@drawable/bg_dark4"
                android:padding="10dp"
                android:layout_weight="1"/>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcComment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingVertical="8dp">
        </androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>

    <include layout="@layout/layout_bottom_navigation"
        android:id="@+id/bottom_navigation_container"/>

</LinearLayout>