<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="4dp"
    android:layout_marginHorizontal="4dp"
    android:layout_marginVertical="2dp">

    <ImageView
        android:id="@+id/ivIngredient"
        android:layout_width="104dp"
        android:layout_height="104dp"
        android:scaleType="centerCrop"
        android:background="@drawable/rounded_img_16"
        android:clipToOutline="true"
        android:src="@drawable/food_placeholder" />

    <TextView
        android:id="@+id/tvIngredientName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tên nguyên liệu"
        android:textColor="@color/dark1"
        android:textSize="14sp"
        android:gravity="center_horizontal"
        android:layout_marginTop="6dp" />

    <TextView
        android:id="@+id/tvIngredientQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Số lượng"
        android:textColor="@color/dark1"
        android:textSize="13sp"
        android:gravity="center_horizontal"
        android:layout_marginTop="2dp" />

</LinearLayout> 