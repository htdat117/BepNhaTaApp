<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:padding="8dp"
    android:layout_marginBottom="8dp"
    android:elevation="4dp"
    android:outlineAmbientShadowColor="@color/primary1_shadow"
    android:outlineSpotShadowColor="@color/primary1_shadow"
    android:background="@drawable/bg_ingredient_item">

    <!-- Ingredient image -->
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivIngredient"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:scaleType="centerCrop"
        android:src="@drawable/food_placeholder"
        app:shapeAppearanceOverlay="@style/Rounded8Image" />

    <!-- Name -->
    <TextView
        android:id="@+id/tvIngredientName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Tên nguyên liệu"
        android:textColor="@color/dark1"
        style="@style/Body.Medium.Ag2"
        android:layout_marginStart="12dp" />

    <!-- Quantity -->
    <TextView
        android:id="@+id/tvIngredientQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Số lượng"
        android:textColor="@color/dark1"
        style="@style/Body.Regular.Ag2"/>

</LinearLayout> 