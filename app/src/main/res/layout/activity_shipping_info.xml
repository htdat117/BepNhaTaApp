<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/dark3">

    <include layout="@layout/layout_back_header" android:id="@+id/header"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="0dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_bold"
                android:paddingTop="24dp"
                android:paddingHorizontal="16dp"
                android:text="Tên người nhận hàng (*)"
                android:paddingBottom="8dp"
                android:textSize="@dimen/body1" />

            <EditText
                android:id="@+id/edtName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="16dp"
                android:layout_marginHorizontal="16dp"
                android:hint="Vui lòng nhập"
                android:textColorHint="@color/dark2"
                android:textColor="@color/dark1"
                android:gravity="center_vertical"
                android:textSize="@dimen/body2"
                android:background="@drawable/bg_rounded_8"
                android:padding="12dp"
                android:drawableEnd="@drawable/delete_all"
                android:drawablePadding="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_bold"
                android:paddingTop="16dp"
                android:paddingHorizontal="16dp"
                android:text="Số điện thoại (*)"
                android:paddingBottom="8dp"
                android:textSize="@dimen/body1" />

            <EditText
                android:id="@+id/edtPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="16dp"
                android:layout_marginHorizontal="16dp"
                android:hint="Vui lòng nhập"
                android:textColorHint="@color/dark2"
                android:textColor="@color/dark1"
                android:gravity="center_vertical"
                android:textSize="@dimen/body2"
                android:background="@drawable/bg_rounded_8"
                android:padding="12dp"
                android:drawableEnd="@drawable/delete_all"
                android:drawablePadding="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_bold"
                android:paddingTop="16dp"
                android:paddingHorizontal="16dp"
                android:text="Email"
                android:paddingBottom="8dp"
                android:textSize="@dimen/body1" />

            <EditText
                android:id="@+id/edtEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="16dp"
                android:layout_marginHorizontal="16dp"
                android:hint="Vui lòng nhập"
                android:textColorHint="@color/dark2"
                android:textColor="@color/dark1"
                android:gravity="center_vertical"
                android:textSize="@dimen/body2"
                android:background="@drawable/bg_rounded_8"
                android:padding="12dp"
                android:drawableEnd="@drawable/delete_all"
                android:drawablePadding="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_bold"
                android:paddingTop="16dp"
                android:paddingHorizontal="16dp"
                android:text="Địa chỉ nhận hàng (*)"
                android:paddingBottom="8dp"
                android:textSize="@dimen/body1" />

            <EditText
                android:id="@+id/edtCity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="16dp"
                android:layout_marginHorizontal="16dp"
                android:hint="Tỉnh/Thành phố"
                android:textColorHint="@color/dark2"
                android:textColor="@color/dark1"
                android:gravity="center_vertical"
                android:textSize="@dimen/body2"
                android:background="@drawable/bg_rounded_8"
                android:padding="12dp"
                android:drawableEnd="@drawable/delete_all"
                android:drawablePadding="8dp"
                android:layout_marginBottom="8dp"/>
            <EditText
                android:id="@+id/edtDistrict"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="16dp"
                android:layout_marginHorizontal="16dp"
                android:hint="Quận/Huyện"
                android:textColorHint="@color/dark2"
                android:textColor="@color/dark1"
                android:gravity="center_vertical"
                android:textSize="@dimen/body2"
                android:background="@drawable/bg_rounded_8"
                android:padding="12dp"
                android:drawableEnd="@drawable/delete_all"
                android:drawablePadding="8dp"
                android:layout_marginBottom="8dp"/>
            <EditText
                android:id="@+id/edtAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="16dp"
                android:layout_marginHorizontal="16dp"
                android:hint="Địa chỉ chi tiết"
                android:textColorHint="@color/dark2"
                android:textColor="@color/dark1"
                android:gravity="center_vertical"
                android:textSize="@dimen/body2"
                android:background="@drawable/bg_rounded_8"
                android:padding="12dp"
                android:drawableEnd="@drawable/delete_all"
                android:drawablePadding="8dp"
                android:layout_marginBottom="8dp"/>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary4"
        android:padding="12dp">
        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đồng ý"
            android:background="@drawable/bg_button_primary"
            android:textColor="@android:color/white"
            android:textStyle="bold"/>
    </LinearLayout>
</LinearLayout> 