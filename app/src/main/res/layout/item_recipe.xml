<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingVertical="6dp">

    <ImageView
        android:id="@+id/imgRecipe"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:scaleType="centerCrop"
        android:src="@drawable/placeholder_banner_background" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="8dp">

        <TextView
            android:id="@+id/tvRecipeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Body.Medium.Ag3"
            android:text="Sườn nướng mật ong" />

        <TextView
            android:id="@+id/tvRecipeKcal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Body.Regular.Ag4"
            android:text="~ 1560 Kcal" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/btnRecipeOptions"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_3dot"
        android:background="@android:color/transparent"
        android:contentDescription="More" />
</LinearLayout> 