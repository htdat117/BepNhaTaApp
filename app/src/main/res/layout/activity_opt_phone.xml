<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/primary1"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_circle_left_back"
            android:contentDescription="Back" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Thay đổi số điện thoại/Email"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="16dp">

            <!-- Logo -->
            <ImageView
                android:id="@+id/img_logo"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/ic_logo"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:scaleType="centerCrop"/>

            <!-- Thông báo gửi mã -->
            <TextView
                android:id="@+id/tv_otp_notice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mã xác thực được gửi đến "
                android:textColor="@android:color/black"
                android:textSize="@dimen/body1"
                android:gravity="center"
                android:layout_marginBottom="0dp"/>

            <TextView
                android:id="@+id/tv_otp_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="datht22411@st.uel.edu.vn"
                android:textColor="@color/orange"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_marginBottom="0dp"
                android:layout_marginTop="0dp"/>

            <TextView
                android:id="@+id/tv_otp_sub_notice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vui lòng nhập mã xác thực vào ô bên dưới"
                android:textColor="@android:color/black"
                android:textSize="@dimen/body1"
                android:gravity="center"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="0dp"/>

            <!-- OTP input -->
            <LinearLayout
                android:id="@+id/otp_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="15dp">

                <!-- 6 ô nhập mã OTP -->
                <EditText
                    android:id="@+id/otp_1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/bg_edittext_outline_orange_pmr4"
                    android:gravity="center"
                    android:textSize="24sp"
                    android:maxLength="1"
                    android:inputType="number"
                    android:textColor="@android:color/black"/>

                <EditText
                    android:id="@+id/otp_2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/bg_edittext_outline_orange_pmr4"
                    android:gravity="center"
                    android:textSize="24sp"
                    android:maxLength="1"
                    android:inputType="number"
                    android:textColor="@android:color/black"/>

                <EditText
                    android:id="@+id/otp_3"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/bg_edittext_outline_orange_pmr4"
                    android:gravity="center"
                    android:textSize="24sp"
                    android:maxLength="1"
                    android:inputType="number"
                    android:textColor="@android:color/black"/>

                <EditText
                    android:id="@+id/otp_4"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/bg_edittext_outline_orange_pmr4"
                    android:gravity="center"
                    android:textSize="24sp"
                    android:maxLength="1"
                    android:inputType="number"
                    android:textColor="@android:color/black"/>

                <EditText
                    android:id="@+id/otp_5"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/bg_edittext_outline_orange_pmr4"
                    android:gravity="center"
                    android:textSize="24sp"
                    android:maxLength="1"
                    android:inputType="number"
                    android:textColor="@android:color/black"/>

                <EditText
                    android:id="@+id/otp_6"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/bg_edittext_outline_orange_pmr4"
                    android:gravity="center"
                    android:textSize="24sp"
                    android:maxLength="1"
                    android:inputType="number"
                    android:textColor="@android:color/black"/>
            </LinearLayout>

            <!-- Thời gian đếm ngược -->
            <TextView
                android:id="@+id/tv_timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="05:00"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- Không nhận được mã + Gửi lại mã -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="0dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Không nhận được mã?"
                    android:textColor="#888888"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginEnd="8dp"/>

                <!-- Spacer để đẩy "Gửi lại mã" sang phải -->
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/tv_resend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gửi lại mã"
                    android:textColor="@color/orange"
                    android:textSize="18sp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <!-- Nút xác nhận -->
            <Button
                android:id="@+id/btn_confirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Xác nhận"
                android:textSize="20sp"
                android:textStyle="bold"
                android:backgroundTint="@color/orange"
                android:textColor="@android:color/white"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/bg_badge_orange"/>

            <!-- Hỗ trợ -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginBottom="0dp">

                <TextView
                    android:id="@+id/tv_support"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nếu bạn không nhận được OTP vui lòng gọi tổng đài"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="5dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="19001234"
                        android:textSize="16sp"
                        android:textColor="@color/orange"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" để được hỗ trợ."
                        android:textSize="16sp"
                        android:textColor="@android:color/black"/>

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bếp Nhà Ta xin cảm ơn."
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_marginBottom="16dp"/>
        </LinearLayout>
    </ScrollView>

    <!-- Bottom navigation -->
    <include
        layout="@layout/layout_bottom_navigation"
        android:id="@+id/bottom_navigation_container"/>
</LinearLayout>